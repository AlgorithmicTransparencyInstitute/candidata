<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="mb-4">
      <%= link_to "â† Back to Bodies", bodies_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
    </div>

    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <h1 class="text-3xl font-bold text-gray-900"><%= @body_name %></h1>
      
      <div class="mt-3 flex flex-wrap gap-3">
        <% if @sample_office %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
            <%= case @sample_office.level
                when 'federal' then 'bg-purple-100 text-purple-800'
                when 'state' then 'bg-blue-100 text-blue-800'
                when 'local' then 'bg-green-100 text-green-800'
                end %>">
            <%= @sample_office.level.titleize %>
          </span>
          <% if @sample_office.state.present? %>
            <%= link_to state_path(@sample_office.state), class: "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 hover:bg-indigo-200" do %>
              <%= @sample_office.state %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="mt-4 grid grid-cols-2 sm:grid-cols-4 gap-4">
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-indigo-600"><%= @total_offices %></div>
          <div class="text-sm text-gray-500">Total Seats</div>
        </div>
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-green-600"><%= @current_holders.count %></div>
          <div class="text-sm text-gray-500">Current Members</div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Offices List -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Seats / Offices</h2>
          </div>
          <div class="divide-y divide-gray-200">
            <% @offices.each do |office| %>
              <div class="px-6 py-4 hover:bg-gray-50">
                <div class="flex justify-between items-start">
                  <div>
                    <%= link_to office_path(office), class: "text-base font-medium text-indigo-600 hover:text-indigo-900" do %>
                      <%= office.title %>
                      <% if office.seat.present? %>
                        <span class="text-gray-500 font-normal">(<%= office.seat %>)</span>
                      <% end %>
                    <% end %>
                    <% current_holder = office.officeholders.find { |oh| oh.current? } %>
                    <% if current_holder %>
                      <div class="mt-1 text-sm text-gray-600">
                        Current: <%= link_to current_holder.person.full_name, person_path(current_holder.person), class: "text-indigo-600 hover:text-indigo-900" %>
                      </div>
                    <% else %>
                      <div class="mt-1 text-sm text-gray-400">Vacant</div>
                    <% end %>
                  </div>
                  <% if office.district.present? %>
                    <div class="text-sm text-gray-500">
                      <%= link_to office.district.full_name, district_path(office.district), class: "text-indigo-600 hover:text-indigo-900" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <% if @offices.total_pages > 1 %>
            <div class="px-6 py-4 border-t border-gray-200">
              <%= paginate @offices %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Current Members Sidebar -->
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Current Members</h2>
          </div>
          <div class="divide-y divide-gray-200 max-h-96 overflow-y-auto">
            <% @current_holders.limit(20).each do |officeholder| %>
              <div class="px-6 py-3">
                <%= link_to person_path(officeholder.person), class: "block hover:text-indigo-600" do %>
                  <div class="text-sm font-medium text-gray-900"><%= officeholder.person.full_name %></div>
                  <div class="text-xs text-gray-500">
                    <%= officeholder.office.seat || officeholder.office.title %>
                  </div>
                <% end %>
              </div>
            <% end %>
            <% if @current_holders.count == 0 %>
              <div class="px-6 py-4 text-sm text-gray-500">No current members found</div>
            <% end %>
          </div>
          <% if @current_holders.count > 20 %>
            <div class="px-6 py-3 border-t border-gray-200 text-center">
              <span class="text-sm text-gray-500">+ <%= @current_holders.count - 20 %> more members</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
