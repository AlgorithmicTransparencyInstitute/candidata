<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Election Ballots</h1>
      <p class="mt-2 text-gray-600">Browse primary and general election ballots</p>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <%= form_with url: ballots_path, method: :get, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
            <%= select_tag :year, options_for_select([['All Years', '']] + @years.map { |y| [y, y] }, params[:year]),
                class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
            <%= select_tag :state, options_for_select([['All States', '']] + @states.map { |s| [s, s] }, params[:state]),
                class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Party</label>
            <%= select_tag :party, options_for_select([['All Parties', '']] + @parties.map { |p| [p, p] }, params[:party]),
                class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div class="flex items-end">
            <%= button_tag type: 'submit', class: "w-full px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" do %>
              Filter
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Results Count -->
    <div class="text-sm text-gray-600 mb-4">
      Showing <%= @ballots.total_count %> <%= 'ballot'.pluralize(@ballots.total_count) %>
    </div>

    <!-- Ballots Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @ballots.each do |ballot| %>
        <%= link_to ballot_path(ballot), class: "block bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md hover:border-indigo-300 transition-all" do %>
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-2">
              <span class="inline-block px-2 py-1 text-xs font-semibold rounded <%= ballot.party == 'Democratic' ? 'bg-blue-100 text-blue-800' : ballot.party == 'Republican' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                <%= ballot.party || 'Nonpartisan' %>
              </span>
              <span class="text-sm font-medium text-gray-600"><%= ballot.election_type.titleize %></span>
            </div>
            <span class="text-sm text-gray-500"><%= ballot.state %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= ballot.name %></h3>
          <p class="text-sm text-gray-600 mb-3">
            <%= ballot.date.strftime('%B %d, %Y') if ballot.date %>
          </p>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500"><%= pluralize(ballot.contests.count, 'contest') %></span>
            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if @ballots.empty? %>
      <div class="text-center py-12 bg-white rounded-lg shadow-sm border border-gray-200">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <p class="mt-2 text-gray-500">No ballots found matching your filters.</p>
      </div>
    <% end %>

    <!-- Pagination -->
    <% if @ballots.total_pages > 1 %>
      <div class="mt-6">
        <%= paginate @ballots %>
      </div>
    <% end %>
  </main>
</div>
