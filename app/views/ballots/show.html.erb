<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
      <%= link_to "← Back to Ballots", ballots_path, class: "text-indigo-600 hover:text-indigo-800" %>
    </div>

    <!-- Ballot Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-6">
      <div class="flex items-start justify-between mb-4">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <span class="inline-block px-3 py-1 text-sm font-semibold rounded <%= @ballot.party == 'Democratic' ? 'bg-blue-100 text-blue-800' : @ballot.party == 'Republican' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @ballot.party || 'Nonpartisan' %>
            </span>
            <span class="text-sm font-medium text-gray-600"><%= @ballot.election_type.titleize %></span>
          </div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @ballot.name %></h1>
        </div>
        <div class="text-right">
          <div class="text-sm text-gray-500">State</div>
          <div class="text-2xl font-bold text-gray-900"><%= @ballot.state %></div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6 pt-6 border-t border-gray-200">
        <div>
          <div class="text-sm text-gray-500">Date</div>
          <div class="text-lg font-semibold text-gray-900">
            <%= @ballot.date.strftime('%B %d, %Y') if @ballot.date %>
          </div>
        </div>
        <div>
          <div class="text-sm text-gray-500">Contests</div>
          <div class="text-lg font-semibold text-gray-900">
            <%= pluralize(@contests.count, 'contest') %>
          </div>
        </div>
        <div>
          <div class="text-sm text-gray-500">Year</div>
          <div class="text-lg font-semibold text-gray-900"><%= @ballot.year %></div>
        </div>
      </div>
    </div>

    <!-- Contests List -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Contests on this Ballot</h2>

      <div class="space-y-4">
        <% @contests.each do |contest| %>
          <%= link_to contest_path(contest), class: "block border border-gray-200 rounded-lg p-5 hover:border-indigo-300 hover:shadow-sm transition-all" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                  <%= contest.office&.title || 'Office Not Specified' %>
                  <% if contest.office&.seat.present? %>
                    <span class="text-gray-600">(<%= contest.office.seat %>)</span>
                  <% end %>
                </h3>
                <p class="text-sm text-gray-600">
                  <%= contest.contest_type.titleize %>
                  <% if contest.party.present? %>
                    · <%= contest.party %>
                  <% end %>
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  <%= pluralize(contest.candidates.count, 'candidate') %>
                </p>
              </div>
              <svg class="w-5 h-5 text-indigo-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>

      <% if @contests.empty? %>
        <div class="text-center py-8 text-gray-500">
          No contests found for this ballot.
        </div>
      <% end %>
    </div>
  </main>
</div>
