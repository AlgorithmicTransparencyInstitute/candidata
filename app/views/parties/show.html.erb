<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="mb-4">
      <%= link_to "â† Back to Parties", parties_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
    </div>

    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @party.name %></h1>
          <% if @party.abbreviation.present? %>
            <p class="mt-1 text-lg text-gray-500">(<%= @party.abbreviation %>)</p>
          <% end %>
        </div>
        <% if @party.ideology.present? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
            <%= @party.ideology %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
      <!-- Stats Sidebar -->
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Statistics</h3>
          <dl class="space-y-4">
            <div>
              <dt class="text-sm text-gray-500">Total Members</dt>
              <dd class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@total_members) %></dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Current Officeholders</dt>
              <dd class="text-2xl font-bold text-green-600"><%= number_with_delimiter(@current_officeholders_count) %></dd>
            </div>
          </dl>
        </div>

        <% if @by_state.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">By State</h3>
            <ul class="space-y-2 max-h-64 overflow-y-auto">
              <% @by_state.first(15).each do |state, count| %>
                <li class="flex justify-between text-sm">
                  <%= link_to state, state_path(state), class: "text-indigo-600 hover:text-indigo-900" %>
                  <span class="text-gray-500"><%= count %></span>
                </li>
              <% end %>
              <% if @by_state.length > 15 %>
                <li class="text-sm text-gray-400">+ <%= @by_state.length - 15 %> more states</li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <!-- Members List -->
      <div class="lg:col-span-3">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Members</h2>
          </div>
          
          <div class="divide-y divide-gray-200">
            <% @members.each do |person| %>
              <div class="px-6 py-4 hover:bg-gray-50">
                <%= link_to person_path(person), class: "flex items-center justify-between" do %>
                  <div class="flex items-center gap-3">
                    <% if person.photo_url.present? %>
                      <img src="<%= person.photo_url %>" alt="" class="w-10 h-10 rounded-full object-cover">
                    <% else %>
                      <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
                        <span class="text-gray-500 font-medium text-sm"><%= person.first_name.first %><%= person.last_name.first %></span>
                      </div>
                    <% end %>
                    <div>
                      <div class="text-sm font-medium text-gray-900"><%= person.full_name %></div>
                      <% if person.state_of_residence.present? %>
                        <div class="text-xs text-gray-500"><%= person.state_of_residence %></div>
                      <% end %>
                    </div>
                  </div>
                  <div class="flex items-center gap-2">
                    <% current_office = person.officeholders.find(&:current?)&.office %>
                    <% if current_office %>
                      <span class="text-xs text-gray-500"><%= truncate(current_office.title, length: 30) %></span>
                      <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Current</span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

          <% if @members.total_pages > 1 %>
            <div class="px-6 py-4 border-t border-gray-200">
              <%= paginate @members %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
