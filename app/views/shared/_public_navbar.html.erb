<nav class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">C</span>
          </div>
          <span class="text-xl font-semibold text-gray-900">Candidata</span>
        <% end %>
        
        <div class="hidden sm:ml-8 sm:flex sm:space-x-1">
          <%= link_to "Politicians", people_path, 
              class: "#{request.path.start_with?('/people') ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Offices", offices_path, 
              class: "#{request.path.start_with?('/offices') ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Bodies", bodies_path, 
              class: "#{request.path.start_with?('/bodies') ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Parties", parties_path, 
              class: "#{request.path.start_with?('/parties') ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "States", states_path, 
              class: "#{request.path.start_with?('/states') ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Districts", districts_path, 
              class: "#{request.path.start_with?('/districts') ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Help", help_path, 
              class: "#{request.path.start_with?('/help') ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>

      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <div class="relative" data-controller="dropdown">
            <button type="button" 
                    data-action="click->dropdown#toggle"
                    class="flex items-center space-x-2 px-3 py-2 rounded-lg hover:bg-gray-50 transition-colors duration-150 focus:outline-none">
              <div class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center">
                <span class="text-indigo-600 font-medium text-sm"><%= (current_user.name || current_user.email).first.upcase %></span>
              </div>
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>

            <div data-dropdown-target="menu" 
                 class="hidden absolute right-0 mt-2 w-48 rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5 py-1 z-50">
              <% if current_user.admin? %>
                <%= link_to "Admin Dashboard", admin_root_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
              <% end %>
              <% if current_user.researcher? %>
                <%= link_to "Researcher Dashboard", researcher_root_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
              <% end %>
              <div class="border-t border-gray-100"></div>
              <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
            </div>
          </div>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium" %>
        <% end %>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="sm:hidden pb-3 pt-2 border-t border-gray-100">
      <div class="flex flex-wrap gap-2">
        <%= link_to "Politicians", people_path, class: "text-gray-600 hover:text-gray-900 px-3 py-1 text-sm rounded-md hover:bg-gray-50" %>
        <%= link_to "Offices", offices_path, class: "text-gray-600 hover:text-gray-900 px-3 py-1 text-sm rounded-md hover:bg-gray-50" %>
        <%= link_to "Bodies", bodies_path, class: "text-gray-600 hover:text-gray-900 px-3 py-1 text-sm rounded-md hover:bg-gray-50" %>
        <%= link_to "Parties", parties_path, class: "text-gray-600 hover:text-gray-900 px-3 py-1 text-sm rounded-md hover:bg-gray-50" %>
        <%= link_to "States", states_path, class: "text-gray-600 hover:text-gray-900 px-3 py-1 text-sm rounded-md hover:bg-gray-50" %>
        <%= link_to "Districts", districts_path, class: "text-gray-600 hover:text-gray-900 px-3 py-1 text-sm rounded-md hover:bg-gray-50" %>
      </div>
    </div>
  </div>
</nav>
