<div class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Verification Queue</h1>

  <!-- Stats Overview -->
  <div class="grid grid-cols-3 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-purple-600"><%= @stats[:pending] %></div>
      <div class="text-sm text-gray-600">Pending Validation</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-orange-600"><%= @stats[:in_progress] %></div>
      <div class="text-sm text-gray-600">In Progress</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-green-600"><%= @stats[:completed_total] %></div>
      <div class="text-sm text-gray-600">Completed</div>
    </div>
  </div>

  <!-- Assignments -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Validation Queue</h2>
      <p class="text-sm text-gray-600">Review and verify accounts entered by researchers</p>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @assignments.any? %>
        <% @assignments.each do |assignment| %>
          <%= link_to verification_assignment_path(assignment), class: "block px-6 py-4 hover:bg-gray-50 transition-colors" do %>
            <div class="flex justify-between items-center">
              <div>
                <div class="font-medium text-lg text-gray-900"><%= assignment.person.full_name %></div>
                <div class="text-sm text-gray-600">
                  <%= assignment.person.primary_party&.name || "No party" %> ·
                  <%= assignment.person.state_of_residence || "Unknown state" %>
                </div>
                <div class="text-sm text-gray-500 mt-1">
                  <% needs_verification = assignment.person.social_media_accounts.campaign.core_platforms.needs_verification.count %>
                  <% if needs_verification > 0 %>
                    <span class="text-orange-600"><%= needs_verification %> accounts need verification</span>
                  <% else %>
                    <span class="text-green-600">All accounts verified</span>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center gap-3" onclick="event.stopPropagation()">
                <%= assignment_status_badge(assignment.status) %>
                <% if assignment.pending? %>
                  <%= button_to "Start Verify", start_verification_assignment_path(assignment), method: :patch, class: "px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700" %>
                <% else %>
                  <span class="px-4 py-2 bg-purple-600 text-white rounded">Continue →</span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="px-6 py-12 text-center text-gray-500">
          <p class="text-lg">No data validation assignments.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Completed -->
  <% if @completed.any? %>
    <div class="mt-8 bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Recently Completed</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @completed.each do |assignment| %>
          <div class="px-6 py-3 flex justify-between items-center text-sm">
            <div>
              <%= link_to assignment.person.full_name, verification_assignment_path(assignment), class: "text-gray-900 hover:text-purple-600" %>
              <span class="text-gray-500 ml-2"><%= time_ago_in_words(assignment.completed_at) %> ago</span>
            </div>
            <%= button_to "Reopen", reopen_verification_assignment_path(assignment), method: :patch, class: "px-3 py-1 bg-yellow-600 text-white text-xs rounded hover:bg-yellow-700" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
