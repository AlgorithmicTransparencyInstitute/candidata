<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Verification", verification_root_path, class: "text-purple-600 hover:text-purple-800" %>
  </div>

  <!-- Person Header -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @person.full_name %></h1>
        <p class="text-gray-600">
          <%= @person.primary_party&.name || "No party" %> ·
          <%= @person.state_of_residence || "Unknown state" %>
        </p>
        <% if @person.website_campaign.present? %>
          <div class="mt-1">
            <a href="<%= @person.website_campaign %>" target="_blank" class="text-sm text-blue-600 hover:text-blue-800 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>
              Campaign Website
            </a>
          </div>
        <% end %>
      </div>
      <div class="flex items-center gap-2">
        <%= assignment_status_badge(@assignment.status) %>
        <% if @assignment.pending? %>
          <%= button_to "Start Verification", start_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700" %>
        <% elsif @assignment.in_progress? && @accounts.empty? %>
          <%= button_to "Mark Complete", complete_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Accounts to Review -->
  <% if @accounts.any? %>
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Accounts to Review</h2>
        <p class="text-sm text-gray-600">Click each account to verify, edit, or mark as not found</p>
      </div>
      <div class="divide-y divide-gray-200">
        <% @accounts.each do |account| %>
          <%= link_to verification_account_path(account), class: "block px-6 py-4 hover:bg-gray-50 transition-colors" do %>
            <div class="flex justify-between items-start">
              <div class="flex items-center gap-3 flex-1">
                <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center flex-shrink-0">
                  <%= platform_icon(account.platform, size: 22) %>
                </div>
                <div class="flex-1">
                  <div class="font-medium text-gray-900"><%= account.platform %></div>
                  <% if account.url.present? %>
                    <div class="text-sm text-blue-600 hover:text-blue-800 flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                      <%= account.url.truncate(50) %>
                    </div>
                  <% elsif account.handle.present? %>
                    <div class="text-sm text-gray-600">@<%= account.handle %></div>
                  <% else %>
                    <div class="text-sm text-gray-500 italic">No URL or handle entered</div>
                  <% end %>
                  <% if account.entered_by %>
                    <div class="text-xs text-gray-500 mt-1">
                      Entered by <%= account.entered_by.name %> · <%= time_ago_in_words(account.entered_at) %> ago
                    </div>
                  <% end %>
                  <% if account.research_notes.present? %>
                    <div class="mt-1.5 px-2.5 py-1.5 bg-amber-50 border border-amber-200 rounded text-xs text-amber-800">
                      <span class="font-medium">Note:</span> <%= account.research_notes %>
                    </div>
                  <% end %>
                </div>
              </div>
              <% if @assignment.in_progress? %>
                <div class="flex items-center gap-2 flex-shrink-0">
                  <span class="px-4 py-2 bg-purple-600 text-white text-sm rounded hover:bg-purple-700">
                    Review →
                  </span>
                </div>
              <% else %>
                <span class="text-sm text-gray-500 flex-shrink-0">Start verification to review</span>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Already Verified -->
  <% if @verified_accounts.any? %>
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Verified Accounts</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @verified_accounts.each do |account| %>
          <div class="px-6 py-3 flex items-center gap-3">
            <%= platform_icon(account.platform, size: 20) %>
            <div class="flex-1">
              <span class="font-medium"><%= account.platform %></span>
              <span class="text-gray-600">- <%= account.url.presence || "@#{account.handle}" %></span>
            </div>
            <span class="text-green-600 text-sm">✓ Verified by <%= account.verified_by&.name %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
