<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Verification Queue", verification_queue_path, class: "text-purple-600 hover:text-purple-800" %>
  </div>

  <!-- Main Content: Person Details + Accounts (Left) + Instructions (Right) -->
  <div class="flex gap-6 items-start">
    <!-- Left Column: Person Details + Accounts -->
    <div class="flex-1 min-w-0">
      <!-- Person Details -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-5">
          <div class="flex items-start gap-4 mb-4">
            <% if @person.photo_url.present? %>
              <img src="<%= @person.photo_url %>" alt="<%= @person.full_name %>" class="w-20 h-20 rounded-lg object-cover">
            <% else %>
              <div class="w-20 h-20 rounded-lg bg-gray-200 flex items-center justify-center">
                <span class="text-gray-500 font-medium text-2xl"><%= @person.first_name.first %><%= @person.last_name.first %></span>
              </div>
            <% end %>
            <div class="flex-1">
              <h1 class="text-2xl font-bold text-gray-900"><%= @person.full_name %></h1>
              <div class="mt-1 flex flex-wrap gap-x-3 gap-y-1 text-sm text-gray-600">
                <% if @person.primary_party %>
                  <span class="inline-flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-gray-400"></span>
                    <%= @person.primary_party.name %>
                  </span>
                <% end %>
                <% if @person.state_of_residence.present? %>
                  <span><%= @person.state_of_residence %></span>
                <% end %>
              </div>
            </div>
          </div>

          <% if @person.website_campaign.present? || @person.website_official.present? %>
            <div class="mb-4 flex flex-wrap gap-3 text-sm">
              <% if @person.website_campaign.present? %>
                <a href="<%= @person.website_campaign %>" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-800 flex items-center gap-1">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                  Campaign Site
                </a>
              <% end %>
              <% if @person.website_official.present? %>
                <a href="<%= @person.website_official %>" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-800 flex items-center gap-1">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                  Official Site
                </a>
              <% end %>
            </div>
          <% end %>

          <!-- Current Offices / Candidacies -->
          <%
            # Find most recent candidacy (prefer 2026 or later)
            recent_candidacy = @candidacies&.first
          %>
          <% if @current_offices.any? || recent_candidacy %>
            <div class="pt-4 border-t border-gray-200 flex flex-wrap gap-x-6 gap-y-2 text-sm">
              <% @current_offices.each do |oh| %>
                <div class="flex items-center gap-1.5 text-gray-700">
                  <svg class="w-4 h-4 text-gray-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                  <span class="font-medium">Current: <%= oh.office.title %></span>
                  <span class="text-gray-400">·</span>
                  <span class="text-gray-500 capitalize"><%= oh.office.level %><%= oh.office.state.present? ? " · #{oh.office.state}" : '' %></span>
                </div>
              <% end %>
              <% if recent_candidacy && @current_offices.empty? %>
                <div class="flex items-center gap-1.5 text-blue-700">
                  <svg class="w-4 h-4 text-blue-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                  <span class="font-medium">Candidate: <%= recent_candidacy.contest.office&.title || 'Unknown Office' %></span>
                  <% if recent_candidacy.contest.office&.seat %>
                    <span class="text-gray-400">·</span>
                    <span class="text-blue-600">(<%= recent_candidacy.contest.office.seat %>)</span>
                  <% end %>
                  <% if recent_candidacy.contest.ballot %>
                    <span class="text-gray-400">·</span>
                    <span class="text-blue-600"><%= recent_candidacy.contest.ballot.year %> <%= recent_candidacy.contest.ballot.election_type&.titleize %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Assignment Status -->
          <div class="mt-4 pt-4 border-t border-gray-200 flex items-center justify-between">
            <span class="px-3 py-1 text-sm rounded-full <%= @assignment.pending? ? 'bg-purple-100 text-purple-800' : @assignment.in_progress? ? 'bg-orange-100 text-orange-800' : 'bg-green-100 text-green-800' %>">
              <%= @assignment.status.humanize %>
            </span>
            <% if @assignment.pending? %>
              <%= button_to "Start Verification", start_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 text-sm font-medium" %>
            <% elsif @assignment.in_progress? %>
              <%= button_to "Mark Complete", complete_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm font-medium", data: { confirm: "Are you sure all accounts have been verified?" } %>
            <% elsif @assignment.completed? %>
              <%= button_to "Reopen", reopen_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 text-sm font-medium" %>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Accounts List -->
      <!-- Campaign Accounts -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Campaign Accounts</h2>
          <p class="text-sm text-gray-500">Verify, edit, or mark as not found. Click "Verify" if correct, or "Edit" to make changes.</p>
        </div>
        <div class="divide-y divide-gray-200" id="campaign-accounts-list">
          <% @accounts.each do |account| %>
            <%= turbo_frame_tag "account_#{account.id}" do %>
              <div class="px-5 py-3" id="account-<%= account.id %>">

              <% if account.research_status == 'not_started' && @assignment.in_progress? %>
                <!-- Not started: Add data or mark not found -->
                <div class="flex items-center gap-2">
                  <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                    <%= platform_icon(account.platform, size: 16) %>
                  </div>
                  <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
                  <span class="text-sm text-gray-400 italic flex-1">No data entered</span>
                  <button type="button" onclick="toggleEdit(<%= account.id %>)" class="px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 shrink-0">Add Data</button>
                  <%= button_to "Not Found", mark_not_found_verification_account_path(account), method: :patch, class: "px-3 py-1 bg-gray-200 text-gray-600 text-sm rounded-md hover:bg-gray-300 shrink-0", data: { confirm: "Mark this account as not found?" } %>
                  <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                    <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
                  </button>
                </div>
                <!-- Edit form (hidden by default) -->
                <div class="hidden mt-2" id="edit-<%= account.id %>">
                  <div class="flex items-center gap-2 ml-9">
                    <%= form_with url: mark_entered_verification_account_path(account), method: :patch, class: "flex items-center gap-2 flex-1 min-w-0" do %>
                      <input type="url" name="url" placeholder="https://..." class="flex-1 min-w-0 px-2.5 py-1 text-sm border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
                      <button type="submit" class="px-3 py-1 bg-purple-600 text-white text-sm rounded-md hover:bg-purple-700 shrink-0">Save (needs verification)</button>
                    <% end %>
                    <button type="button" onclick="toggleEdit(<%= account.id %>)" class="px-3 py-1 text-gray-500 text-sm hover:bg-gray-100 rounded-md shrink-0">Cancel</button>
                  </div>
                </div>

              <% elsif account.research_status == 'entered' && @assignment.in_progress? %>
                <!-- Entered: Display with Verify/Edit buttons -->
                <div class="flex items-center gap-2 group" id="display-<%= account.id %>">
                  <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                    <%= platform_icon(account.platform, size: 16) %>
                  </div>
                  <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
                  <div class="flex-1 text-sm min-w-0 truncate">
                    <% if account.url.present? %>
                      <a href="<%= account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= account.url %></a>
                    <% else %>
                      <span class="text-gray-400 italic">No URL</span>
                    <% end %>
                  </div>
                  <span class="px-2 py-0.5 text-xs rounded-full bg-blue-100 text-blue-700 shrink-0">Needs Verification</span>
                  <% if account.entered_by %>
                    <span class="text-xs text-gray-400 shrink-0">by <%= account.entered_by.name.split.first %></span>
                  <% end %>
                  <%= button_to "✓ Verify", verify_verification_account_path(account), method: :patch, class: "px-3 py-1 bg-green-600 text-white text-sm rounded-md hover:bg-green-700 shrink-0" %>
                  <button type="button" onclick="toggleEdit(<%= account.id %>)" class="text-xs text-purple-600 hover:text-purple-800 shrink-0">Edit</button>
                  <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                    <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
                  </button>
                </div>
                <!-- Edit form (hidden by default) -->
                <div class="hidden mt-2" id="edit-<%= account.id %>">
                  <div class="flex items-center gap-2 ml-9">
                    <%= form_with url: mark_entered_verification_account_path(account), method: :patch, class: "flex items-center gap-2 flex-1 min-w-0" do %>
                      <input type="url" name="url" value="<%= account.url %>" placeholder="https://..." class="flex-1 min-w-0 px-2.5 py-1 text-sm border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
                      <button type="submit" class="px-3 py-1 bg-purple-600 text-white text-sm rounded-md hover:bg-purple-700 shrink-0">Save (needs re-verification)</button>
                    <% end %>
                    <button type="button" onclick="toggleEdit(<%= account.id %>)" class="px-3 py-1 text-gray-500 text-sm hover:bg-gray-100 rounded-md shrink-0">Cancel</button>
                    <%= button_to "Mark Not Found", mark_not_found_verification_account_path(account), method: :patch, class: "px-3 py-1 text-red-500 text-sm hover:bg-red-50 rounded-md shrink-0", data: { confirm: "Mark as not found?" } %>
                  </div>
                </div>

              <% elsif account.research_status == 'not_found' && @assignment.in_progress? %>
                <!-- Not found: Verify or undo -->
                <div class="flex items-center gap-2" id="not-found-<%= account.id %>" data-previous-url="">
                  <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                    <%= platform_icon(account.platform, size: 16) %>
                  </div>
                  <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
                  <div class="flex-1 flex flex-col">
                    <span class="text-sm text-gray-400 italic">Not found</span>
                    <div id="deleted-url-<%= account.id %>" class="hidden mt-1">
                      <span class="text-xs text-gray-400">Deleted: </span>
                      <span id="deleted-url-value-<%= account.id %>" class="text-xs text-gray-500"></span>
                      <button type="button" onclick="restoreDeletedUrl(<%= account.id %>)" class="ml-2 text-xs text-blue-600 hover:text-blue-800">restore</button>
                    </div>
                  </div>
                  <span class="px-2 py-0.5 text-xs rounded-full bg-gray-200 text-gray-500 shrink-0">Not Found</span>
                  <%= button_to "✓ Verify", verify_verification_account_path(account), method: :patch, class: "px-3 py-1 bg-green-600 text-white text-sm rounded-md hover:bg-green-700 shrink-0" %>
                  <%= button_to "Undo", reset_status_verification_account_path(account), method: :patch, class: "text-xs text-blue-600 hover:text-blue-800 shrink-0" %>
                  <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                    <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
                  </button>
                </div>

              <% elsif account.research_status == 'verified' && @assignment.in_progress? %>
                <!-- Verified but assignment reopened: Allow unverify -->
                <div class="flex items-center gap-2">
                  <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                    <%= platform_icon(account.platform, size: 16) %>
                  </div>
                  <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
                  <div class="flex-1 text-sm min-w-0 truncate">
                    <% if account.url.present? %>
                      <a href="<%= account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= account.url %></a>
                    <% else %>
                      <span class="text-gray-400 italic">Not found</span>
                    <% end %>
                  </div>
                  <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-700 shrink-0">✓ Verified</span>
                  <% if account.verified_by %>
                    <span class="text-xs text-gray-400 shrink-0">by <%= account.verified_by.name.split.first %></span>
                  <% end %>
                  <%= button_to "Unverify", unverify_verification_account_path(account), method: :patch, class: "text-xs text-orange-600 hover:text-orange-800 shrink-0", data: { confirm: "Unverify this account to make changes?" } %>
                  <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                    <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
                  </button>
                </div>

              <% elsif account.research_status == 'verified' %>
                <!-- Verified: Read-only, show who verified -->
                <div class="flex items-center gap-2">
                  <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                    <%= platform_icon(account.platform, size: 16) %>
                  </div>
                  <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
                  <div class="flex-1 text-sm min-w-0 truncate">
                    <% if account.url.present? %>
                      <a href="<%= account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= account.url %></a>
                    <% else %>
                      <span class="text-gray-400 italic">Not found</span>
                    <% end %>
                  </div>
                  <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-700 shrink-0">✓ Verified</span>
                  <% if account.verified_by %>
                    <span class="text-xs text-gray-400 shrink-0">by <%= account.verified_by.name.split.first %></span>
                  <% end %>
                </div>

              <% else %>
                <!-- Assignment not in progress -->
                <div class="flex items-center gap-2">
                  <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                    <%= platform_icon(account.platform, size: 16) %>
                  </div>
                  <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
                  <span class="text-sm text-gray-400 flex-1">Start verification to begin</span>
                </div>
              <% end %>

              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Verified Accounts  -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Verified Accounts</h2>
          <p class="text-sm text-gray-500"><%= @assignment.in_progress? ? "Click 'Unverify' to make changes" : "Already completed" %></p>
        </div>
        <div class="divide-y divide-gray-200" id="verified-accounts-list">
          <% if @verified_accounts.empty? %>
            <div class="px-5 py-8 text-center text-gray-400 text-sm" id="verified-empty-state">
              No verified accounts yet
            </div>
          <% else %>
            <% @verified_accounts.each do |account| %>
              <%= turbo_frame_tag "account_#{account.id}" do %>
                <div class="px-5 py-3 flex items-center gap-2 group">
                  <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                    <%= platform_icon(account.platform, size: 16) %>
                  </div>
                  <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
                  <div class="flex-1 text-sm min-w-0 truncate">
                    <% if account.url.present? %>
                      <a href="<%= account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= account.url %></a>
                    <% else %>
                      <span class="text-gray-400 italic">Not found</span>
                    <% end %>
                  </div>
                  <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-700 shrink-0">✓ Verified</span>
                  <% if account.verified_by %>
                    <span class="text-xs text-gray-400 shrink-0">by <%= account.verified_by.name.split.first %></span>
                  <% end %>
                  <% if @assignment.in_progress? %>

                    <%= button_to "Unverify", unverify_verification_account_path(account), method: :patch, class: "px-3 py-1 bg-orange-600 text-white text-xs rounded hover:bg-orange-700", data: { confirm: "Unverify this account to make changes?" } %>
                    <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                      <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
                    </button>
                  <% else %>
                    <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100 opacity-0 group-hover:opacity-100 transition-opacity" title="<%= account.research_notes.present? ? 'View notes' : 'No notes' %>">
                      <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
                    </button>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Instructions Panel (Right Side, Collapsible) -->
    <div class="shrink-0" id="instructions-container">
      <!-- Expanded Instructions -->
      <div id="instructions-expanded" class="w-96 sticky top-6 self-start">
        <%= render "shared/verification_guide", channel_type: @accounts.first&.channel_type || 'campaign' %>
        <button onclick="toggleInstructions()" class="mt-2 w-full px-3 py-1.5 text-sm text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-md flex items-center justify-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
          </svg>
          Hide Instructions
        </button>
      </div>

      <!-- Collapsed Instructions Bar -->
      <div id="instructions-collapsed" class="hidden w-12 sticky top-6 self-start">
        <button onclick="toggleInstructions()" class="w-full h-full min-h-[400px] bg-gradient-to-b from-blue-50 to-indigo-50 border border-blue-200 rounded-lg shadow hover:shadow-md transition-shadow flex items-center justify-center">
          <div class="transform -rotate-90 whitespace-nowrap text-sm font-medium text-gray-700">
            Show Instructions
          </div>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Notes Modal -->
<div id="notesModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h3 class="text-lg font-semibold text-gray-900" id="notesModalTitle">Notes</h3>
      <button type="button" onclick="closeNotesModal()" class="text-gray-400 hover:text-gray-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    <div class="px-6 py-4">
      <textarea id="notesTextarea" rows="4" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" placeholder="Add any notes about this account..."></textarea>
    </div>
    <div class="px-6 py-3 bg-gray-50 rounded-b-lg flex justify-end gap-3">
      <span id="notesSaveStatus" class="text-xs text-gray-400 mr-auto self-center"></span>
      <button type="button" onclick="cancelNotesModal()" class="px-4 py-2 text-sm text-gray-700 hover:text-gray-900">Cancel</button>
      <button type="button" onclick="saveAndCloseNotesModal()" class="px-4 py-2 bg-purple-600 text-white text-sm rounded-md hover:bg-purple-700">Save Notes</button>
    </div>
  </div>
</div>

<script>
  // Get CSRF token
  const csrfToken = document.querySelector('meta[name="csrf-token"]').content;

  // Capture clicks on "Not Found" buttons to save the URL
  document.addEventListener('DOMContentLoaded', function() {
    // Capture all "Not Found" button clicks
    document.addEventListener('click', function(e) {
      const button = e.target.closest('button[type="submit"], input[type="submit"]');
      if (!button) return;

      const form = button.closest('form');
      if (!form || !form.action.includes('mark_not_found')) return;

      const accountId = form.action.match(/accounts\/(\d+)/)[1];

      // Try to find the URL from the display row
      const displayEl = document.getElementById('display-' + accountId);
      let url = null;

      if (displayEl) {
        const urlLink = displayEl.querySelector('a[href]');
        if (urlLink) {
          url = urlLink.textContent.trim();
        }
      }

      // If not found in display, check the edit form input
      if (!url) {
        const editEl = document.getElementById('edit-' + accountId);
        if (editEl) {
          const urlInput = editEl.querySelector('input[type="url"][name="url"]');
          if (urlInput && urlInput.value) {
            url = urlInput.value.trim();
          }
        }
      }

      if (url) {
        // Store in sessionStorage for page reloads
        sessionStorage.setItem('deletedUrl_' + accountId, url);
      }
    });

    // Show deleted URLs on page load if they exist
    Object.keys(sessionStorage).forEach(function(key) {
      if (key.startsWith('deletedUrl_')) {
        const accountId = key.replace('deletedUrl_', '');
        const url = sessionStorage.getItem(key);
        showDeletedUrl(accountId, url);
      }
    });
  });

  function showDeletedUrl(accountId, url) {
    const deletedUrlDiv = document.getElementById('deleted-url-' + accountId);
    const deletedUrlValue = document.getElementById('deleted-url-value-' + accountId);
    const notFoundRow = document.getElementById('not-found-' + accountId);

    if (deletedUrlDiv && deletedUrlValue && url) {
      deletedUrlValue.textContent = url;
      deletedUrlDiv.classList.remove('hidden');
      if (notFoundRow) {
        notFoundRow.setAttribute('data-previous-url', url);
      }
    }
  }

  function restoreDeletedUrl(accountId) {
    const previousUrl = sessionStorage.getItem('deletedUrl_' + accountId);
    if (!previousUrl) return;

    // Call the server to restore the URL
    const formData = new FormData();
    formData.append('url', previousUrl);
    formData.append('_method', 'patch');
    formData.append('authenticity_token', csrfToken);

    fetch('/verification/accounts/' + accountId + '/mark_entered', {
      method: 'POST',
      body: formData
    }).then(function() {
      // Clear from sessionStorage
      sessionStorage.removeItem('deletedUrl_' + accountId);
      // Reload the page to show updated state
      window.location.reload();
    });
  }

  function toggleEdit(accountId) {
    const display = document.getElementById('display-' + accountId);
    const edit = document.getElementById('edit-' + accountId);
    if (display) display.classList.toggle('hidden');
    if (edit) edit.classList.toggle('hidden');
  }

  function toggleInstructions() {
    const expanded = document.getElementById('instructions-expanded');
    const collapsed = document.getElementById('instructions-collapsed');

    if (expanded && collapsed) {
      expanded.classList.toggle('hidden');
      collapsed.classList.toggle('hidden');

      // Save state to localStorage
      const isCollapsed = expanded.classList.contains('hidden');
      localStorage.setItem('verificationInstructionsCollapsed', isCollapsed);
    }
  }

  // Restore collapsed state on page load
  document.addEventListener('DOMContentLoaded', function() {
    const isCollapsed = localStorage.getItem('verificationInstructionsCollapsed') === 'true';
    if (isCollapsed) {
      toggleInstructions();
    }
  });

  // Notes data for each account
  const accountNotes = {
    <% @accounts.each do |account| %>
      <%= account.id %>: <%= account.research_notes.to_s.to_json.html_safe %>,
    <% end %>
    <% @verified_accounts.each do |account| %>
      <%= account.id %>: <%= account.research_notes.to_s.to_json.html_safe %>,
    <% end %>
  };

  let currentNotesAccountId = null;
  const csrfToken = '<%= form_authenticity_token %>';

  function openNotesModal(accountId, platform) {
    currentNotesAccountId = accountId;
    document.getElementById('notesModalTitle').textContent = platform + ' Notes';
    document.getElementById('notesTextarea').value = accountNotes[accountId] || '';
    document.getElementById('notesSaveStatus').textContent = '';
    document.getElementById('notesModal').classList.remove('hidden');
    document.getElementById('notesTextarea').focus();
  }

  function saveAndCloseNotesModal() {
    if (currentNotesAccountId === null) return;
    const textarea = document.getElementById('notesTextarea');
    const newNotes = textarea.value;

    // Update local cache
    accountNotes[currentNotesAccountId] = newNotes;

    // Save via fetch
    const formData = new FormData();
    formData.append('research_notes', newNotes);
    formData.append('_method', 'patch');
    formData.append('authenticity_token', csrfToken);

    const savingAccountId = currentNotesAccountId;
    currentNotesAccountId = null;
    document.getElementById('notesModal').classList.add('hidden');

    fetch('/verification/accounts/' + savingAccountId + '/update_notes', {
      method: 'POST',
      body: formData,
      headers: { 'Accept': 'application/json' }
    }).then(function() {
      // Update the notes icon color on the row without a full reload
      const row = document.getElementById('account-' + savingAccountId);
      if (row) {
        row.querySelectorAll('[data-notes-icon]').forEach(function(icon) {
          if (newNotes.trim()) {
            icon.classList.remove('text-gray-300', 'hover:text-gray-500');
            icon.classList.add('text-blue-600');
          } else {
            icon.classList.remove('text-blue-600');
            icon.classList.add('text-gray-300', 'hover:text-gray-500');
          }
        });
      }
    });
  }

  function cancelNotesModal() {
    currentNotesAccountId = null;
    document.getElementById('notesModal').classList.add('hidden');
  }

  function closeNotesModal() {
    saveAndCloseNotesModal();
  }

  document.getElementById('notesModal').addEventListener('click', function(e) {
    if (e.target === this) saveAndCloseNotesModal();
  });
</script>
