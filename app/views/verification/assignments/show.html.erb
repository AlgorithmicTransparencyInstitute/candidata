<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Verification Queue", verification_queue_path, class: "text-purple-600 hover:text-purple-800" %>
  </div>

  <!-- Main Content: Person Details + Accounts (Left) + Instructions (Right) -->
  <div class="flex gap-6 items-start">
    <!-- Left Column: Person Details + Accounts -->
    <div class="flex-1 min-w-0">
      <!-- Person Details -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-5">
          <div class="flex items-start gap-4 mb-4">
            <% if @person.photo_url.present? %>
              <img src="<%= @person.photo_url %>" alt="<%= @person.full_name %>" class="w-20 h-20 rounded-lg object-cover">
            <% else %>
              <div class="w-20 h-20 rounded-lg bg-gray-200 flex items-center justify-center">
                <span class="text-gray-500 font-medium text-2xl"><%= @person.first_name.first %><%= @person.last_name.first %></span>
              </div>
            <% end %>
            <div class="flex-1">
              <h1 class="text-2xl font-bold text-gray-900"><%= @person.full_name %></h1>
              <div class="mt-1 flex flex-wrap gap-x-3 gap-y-1 text-sm text-gray-600">
                <% if @person.primary_party %>
                  <span class="inline-flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-gray-400"></span>
                    <%= @person.primary_party.name %>
                  </span>
                <% end %>
                <% if @person.state_of_residence.present? %>
                  <span><%= @person.state_of_residence %></span>
                <% end %>
              </div>
            </div>
          </div>

          <% if @person.website_campaign.present? || @person.website_official.present? %>
            <div class="mb-4 flex flex-wrap gap-3 text-sm">
              <% if @person.website_campaign.present? %>
                <a href="<%= @person.website_campaign %>" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-800 flex items-center gap-1">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                  Campaign Site
                </a>
              <% end %>
              <% if @person.website_official.present? %>
                <a href="<%= @person.website_official %>" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-800 flex items-center gap-1">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                  Official Site
                </a>
              <% end %>
            </div>
          <% end %>

          <!-- Current Offices / Candidacies -->
          <%
            # Find most recent candidacy (prefer 2026 or later)
            recent_candidacy = @candidacies&.first
          %>
          <% if @current_offices.any? || recent_candidacy %>
            <div class="pt-4 border-t border-gray-200 flex flex-wrap gap-x-6 gap-y-2 text-sm">
              <% @current_offices.each do |oh| %>
                <div class="flex items-center gap-1.5 text-gray-700">
                  <svg class="w-4 h-4 text-gray-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                  <span class="font-medium">Current: <%= oh.office.title %></span>
                  <span class="text-gray-400">·</span>
                  <span class="text-gray-500 capitalize"><%= oh.office.level %><%= oh.office.state.present? ? " · #{oh.office.state}" : '' %></span>
                </div>
              <% end %>
              <% if recent_candidacy && @current_offices.empty? %>
                <div class="flex items-center gap-1.5 text-blue-700">
                  <svg class="w-4 h-4 text-blue-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                  <span class="font-medium">Candidate: <%= recent_candidacy.contest.office&.title || 'Unknown Office' %></span>
                  <% if recent_candidacy.contest.office&.seat %>
                    <span class="text-gray-400">·</span>
                    <span class="text-blue-600">(<%= recent_candidacy.contest.office.seat %>)</span>
                  <% end %>
                  <% if recent_candidacy.contest.ballot %>
                    <span class="text-gray-400">·</span>
                    <span class="text-blue-600"><%= recent_candidacy.contest.ballot.year %> <%= recent_candidacy.contest.ballot.election_type&.titleize %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Assignment Status -->
          <div class="mt-4 pt-4 border-t border-gray-200 flex items-center justify-between">
            <span class="px-3 py-1 text-sm rounded-full <%= @assignment.pending? ? 'bg-purple-100 text-purple-800' : @assignment.in_progress? ? 'bg-orange-100 text-orange-800' : 'bg-green-100 text-green-800' %>">
              <%= @assignment.status.humanize %>
            </span>
            <% if @assignment.pending? %>
              <%= button_to "Start Verification", start_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 text-sm font-medium" %>
            <% elsif @assignment.in_progress? %>
              <%= button_to "Mark Complete", complete_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm font-medium", data: { confirm: "Are you sure all accounts have been verified?" } %>
            <% elsif @assignment.completed? %>
              <%= button_to "Reopen", reopen_verification_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 text-sm font-medium" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Campaign Accounts -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Campaign Accounts</h2>
          <p class="text-sm text-gray-500">Social media accounts associated with campaigns for elected office.</p>
        </div>
        <div class="divide-y divide-gray-200" id="campaign-accounts-list">
          <% @campaign_accounts.each do |account| %>
            <%= render "verification/accounts/account_row", account: account, assignment: @assignment %>
          <% end %>
        </div>
        <%= render "verification/accounts/add_account_form", person: @person, channel_type: "Campaign" %>
      </div>

      <!-- Official Office Accounts -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Official Office Accounts</h2>
          <p class="text-sm text-gray-500">Social media accounts maintained by the official's government office.</p>
        </div>
        <div class="divide-y divide-gray-200" id="official-office-accounts-list">
          <% @official_accounts.each do |account| %>
            <%= render "verification/accounts/account_row", account: account, assignment: @assignment %>
          <% end %>
        </div>
        <%= render "verification/accounts/add_account_form", person: @person, channel_type: "Official Office" %>
      </div>

      <!-- Personal Accounts -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Personal Accounts</h2>
          <p class="text-sm text-gray-500">Personal social media accounts not directly affiliated with campaigns or office.</p>
        </div>
        <div class="divide-y divide-gray-200" id="personal-accounts-list">
          <% @personal_accounts.each do |account| %>
            <%= render "verification/accounts/account_row", account: account, assignment: @assignment %>
          <% end %>
        </div>
        <%= render "verification/accounts/add_account_form", person: @person, channel_type: "Personal" %>
      </div>
    </div>

    <!-- Instructions Panel (Right Side, Collapsible) -->
    <div class="shrink-0" id="instructions-container">
      <!-- Expanded Instructions -->
      <div id="instructions-expanded" class="w-96 sticky top-6 self-start">
        <%= render "shared/verification_guide", channel_type: "Campaign" %>
        <button onclick="toggleInstructions()" class="mt-2 w-full px-3 py-1.5 text-sm text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-md flex items-center justify-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
          </svg>
          Hide Instructions
        </button>
      </div>

      <!-- Collapsed Instructions Bar -->
      <div id="instructions-collapsed" class="hidden w-12 sticky top-6 self-start">
        <button onclick="toggleInstructions()" class="w-full h-full min-h-[400px] bg-gradient-to-b from-blue-50 to-indigo-50 border border-blue-200 rounded-lg shadow hover:shadow-md transition-shadow flex items-center justify-center">
          <div class="transform -rotate-90 whitespace-nowrap text-sm font-medium text-gray-700">
            Show Instructions
          </div>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Notes Modal -->
<div id="notesModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h3 class="text-lg font-semibold text-gray-900" id="notesModalTitle">Notes</h3>
      <button type="button" onclick="closeNotesModal()" class="text-gray-400 hover:text-gray-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    <div class="px-6 py-4">
      <textarea id="notesTextarea" rows="4" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" placeholder="Add any notes about this account..."></textarea>
    </div>
    <div class="px-6 py-3 bg-gray-50 rounded-b-lg flex justify-end gap-3">
      <span id="notesSaveStatus" class="text-xs text-gray-400 mr-auto self-center"></span>
      <button type="button" onclick="cancelNotesModal()" class="px-4 py-2 text-sm text-gray-700 hover:text-gray-900">Cancel</button>
      <button type="button" onclick="saveAndCloseNotesModal()" class="px-4 py-2 bg-purple-600 text-white text-sm rounded-md hover:bg-purple-700">Save Notes</button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get CSRF token
    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
  });

  function toggleEdit(accountId) {
    const display = document.getElementById('display-' + accountId);
    const edit = document.getElementById('edit-' + accountId);
    if (display) display.classList.toggle('hidden');
    if (edit) edit.classList.toggle('hidden');
  }

  function toggleInstructions() {
    const expanded = document.getElementById('instructions-expanded');
    const collapsed = document.getElementById('instructions-collapsed');

    if (expanded && collapsed) {
      expanded.classList.toggle('hidden');
      collapsed.classList.toggle('hidden');

      // Save state to localStorage
      const isCollapsed = expanded.classList.contains('hidden');
      localStorage.setItem('verificationInstructionsCollapsed', isCollapsed);
    }
  }

  // Restore collapsed state on page load
  document.addEventListener('DOMContentLoaded', function() {
    const isCollapsed = localStorage.getItem('verificationInstructionsCollapsed') === 'true';
    if (isCollapsed) {
      toggleInstructions();
    }
  });

  // Toggle add account form
  function showAddAccountForm(channelType) {
    const button = document.getElementById('add-account-button-' + channelType);
    const form = document.getElementById('add-account-form-content-' + channelType);
    if (button && form) {
      button.classList.add('hidden');
      form.classList.remove('hidden');
    }
  }

  function hideAddAccountForm(channelType) {
    const button = document.getElementById('add-account-button-' + channelType);
    const form = document.getElementById('add-account-form-content-' + channelType);
    if (button && form) {
      form.classList.add('hidden');
      button.classList.remove('hidden');
      // Reset the form
      const formElement = form.querySelector('form');
      if (formElement) formElement.reset();
    }
  }

  // Notes data for each account
  const accountNotes = {
    <% @campaign_accounts.each do |account| %>
      <%= account.id %>: <%= account.research_notes.to_s.to_json.html_safe %>,
    <% end %>
    <% @official_accounts.each do |account| %>
      <%= account.id %>: <%= account.research_notes.to_s.to_json.html_safe %>,
    <% end %>
    <% @personal_accounts.each do |account| %>
      <%= account.id %>: <%= account.research_notes.to_s.to_json.html_safe %>,
    <% end %>
  };

  let currentNotesAccountId = null;
  const csrfToken = '<%= form_authenticity_token %>';

  function openNotesModal(accountId, platform) {
    currentNotesAccountId = accountId;
    document.getElementById('notesModalTitle').textContent = platform + ' Notes';
    document.getElementById('notesTextarea').value = accountNotes[accountId] || '';
    document.getElementById('notesSaveStatus').textContent = '';
    document.getElementById('notesModal').classList.remove('hidden');
    document.getElementById('notesTextarea').focus();
  }

  function saveAndCloseNotesModal() {
    if (currentNotesAccountId === null) return;
    const textarea = document.getElementById('notesTextarea');
    const newNotes = textarea.value;

    // Update local cache
    accountNotes[currentNotesAccountId] = newNotes;

    // Save via fetch
    const formData = new FormData();
    formData.append('research_notes', newNotes);
    formData.append('_method', 'patch');
    formData.append('authenticity_token', csrfToken);

    const savingAccountId = currentNotesAccountId;
    currentNotesAccountId = null;
    document.getElementById('notesModal').classList.add('hidden');

    fetch('/verification/accounts/' + savingAccountId + '/update_notes', {
      method: 'POST',
      body: formData,
      headers: { 'Accept': 'application/json' }
    }).then(function() {
      // Update the notes icon color on the row without a full reload
      const row = document.getElementById('account-' + savingAccountId);
      if (row) {
        row.querySelectorAll('[data-notes-icon]').forEach(function(icon) {
          if (newNotes.trim()) {
            icon.classList.remove('text-gray-300', 'hover:text-gray-500');
            icon.classList.add('text-blue-600');
          } else {
            icon.classList.remove('text-blue-600');
            icon.classList.add('text-gray-300', 'hover:text-gray-500');
          }
        });
      }
    });
  }

  function cancelNotesModal() {
    currentNotesAccountId = null;
    document.getElementById('notesModal').classList.add('hidden');
  }

  function closeNotesModal() {
    saveAndCloseNotesModal();
  }

  document.getElementById('notesModal').addEventListener('click', function(e) {
    if (e.target === this) saveAndCloseNotesModal();
  });
</script>
