<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Assignment", verification_assignment_path(@assignment), class: "text-purple-600 hover:text-purple-800" %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= platform_icon(@account.platform, size: 28) %>
          <div>
            <h1 class="text-xl font-bold text-gray-900"><%= @account.platform %> Account</h1>
            <p class="text-gray-600"><%= @person.full_name %></p>
          </div>
        </div>
        <% if @account.has_revisions? %>
          <div class="relative" data-controller="dropdown">
            <button type="button"
                    data-action="click->dropdown#toggle"
                    class="flex items-center gap-1 px-3 py-1 text-sm bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= @account.version_count %> <%= "version".pluralize(@account.version_count) %>
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg border border-gray-200 p-4 z-50">
              <h3 class="text-sm font-semibold text-gray-900 mb-3">Version History</h3>
              <div class="space-y-2 max-h-64 overflow-y-auto">
                <% @account.versions.reverse.each_with_index do |version, index| %>
                  <div class="text-xs border-l-2 border-gray-300 pl-3 py-1">
                    <div class="font-medium text-gray-900">Version <%= @account.version_count - index %></div>
                    <div class="text-gray-500"><%= version.created_at.strftime("%b %d, %Y %I:%M%p") %></div>
                    <% if version.whodunnit %>
                      <div class="text-gray-600">By User #<%= version.whodunnit %></div>
                    <% end %>
                    <% if version.event == 'update' && version.changeset.present? %>
                      <div class="mt-1 text-gray-700">
                        <% version.changeset.each do |field, (old_val, new_val)| %>
                          <div class="text-xs">
                            <span class="font-medium"><%= field %>:</span>
                            <span class="text-red-600"><%= old_val.to_s.truncate(30) %></span> →
                            <span class="text-green-600"><%= new_val.to_s.truncate(30) %></span>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="p-6">
      <!-- Read-only view with current data -->
      <div class="space-y-4 mb-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">URL</label>
          <div class="p-3 bg-gray-50 rounded-lg border border-gray-200">
            <% if @account.url.present? %>
              <div class="flex items-center justify-between">
                <code class="text-sm text-gray-900"><%= @account.url %></code>
                <a href="<%= @account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm ml-2 flex-shrink-0">
                  Open →
                </a>
              </div>
            <% else %>
              <span class="text-sm text-gray-500 italic">No URL entered</span>
            <% end %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Handle</label>
          <div class="p-3 bg-gray-50 rounded-lg border border-gray-200">
            <% if @account.handle.present? %>
              <code class="text-sm text-gray-900"><%= @account.handle %></code>
            <% else %>
              <span class="text-sm text-gray-500 italic">No handle entered</span>
            <% end %>
          </div>
        </div>

        <% if @account.entered_by %>
          <div class="text-sm text-gray-600 pt-2 border-t">
            Originally entered by <%= @account.entered_by.name.presence || @account.entered_by.email %> · <%= time_ago_in_words(@account.entered_at) %> ago
          </div>
        <% end %>
      </div>

      <!-- Action buttons -->
      <div class="flex flex-col gap-3 pt-4 border-t">
        <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
          <p class="text-sm text-purple-900 font-medium mb-3">Verification Actions:</p>
          <div class="space-y-2">
            <% if @account.url.present? || @account.handle.present? %>
              <div class="flex gap-2">
                <%= button_to "✓ Verify as Correct", verify_verification_account_path(@account), method: :patch, class: "flex-1 px-4 py-2.5 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium" %>
                <%= link_to "✏️ Edit & Verify", edit_verification_account_path(@account), class: "flex-1 px-4 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-center font-medium" %>
              </div>
            <% else %>
              <div class="flex gap-2">
                <%= link_to "✏️ Add Account Data", edit_verification_account_path(@account), class: "flex-1 px-4 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-center font-medium" %>
              </div>
            <% end %>
            <div class="flex gap-2">
              <button type="button" onclick="openRejectModal()" class="flex-1 px-4 py-2.5 bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium">
                ✗ Mark as Not Found
              </button>
              <%= link_to "Cancel", verification_assignment_path(@assignment), class: "flex-1 px-4 py-2.5 text-gray-700 hover:bg-gray-100 rounded-lg text-center border border-gray-300" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Reject/Not Found Modal -->
<div id="rejectModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-red-600">Mark <%= @account.platform %> as Not Found</h3>
    </div>
    <%= form_with url: reject_verification_account_path(@account), method: :patch, class: "p-6" do |f| %>
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Reason (required)
        </label>
        <textarea name="notes" rows="3" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-red-500 focus:border-red-500" placeholder="Explain why this account cannot be found or is incorrect..."></textarea>
        <p class="text-xs text-gray-500 mt-1">
          This will mark the account as "not found" and remove it from verification queue.
        </p>
      </div>
      <div class="flex justify-end gap-3">
        <button type="button" onclick="closeRejectModal()" class="px-4 py-2 text-gray-700 hover:text-gray-900">Cancel</button>
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Mark as Not Found</button>
      </div>
    <% end %>
  </div>
</div>

<script>
  function openRejectModal() {
    document.getElementById('rejectModal').classList.remove('hidden');
  }

  function closeRejectModal() {
    document.getElementById('rejectModal').classList.add('hidden');
  }

  document.getElementById('rejectModal').addEventListener('click', function(e) {
    if (e.target === this) closeRejectModal();
  });
</script>
