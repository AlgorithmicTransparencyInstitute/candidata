<div id="add-account-form-<%= channel_type.parameterize %>">
  <div id="add-account-button-<%= channel_type.parameterize %>" class="px-5 py-3 bg-gray-50 border-t border-gray-200">
    <!-- Add Account Button -->
    <button type="button" onclick="showAddAccountForm('<%= channel_type.parameterize %>')" class="w-full px-4 py-2 text-sm text-purple-600 hover:text-purple-800 hover:bg-purple-50 rounded-md border border-purple-200 border-dashed">
      + Add <%= channel_type %> Account
    </button>
  </div>

  <div id="add-account-form-content-<%= channel_type.parameterize %>" class="hidden px-5 py-3 bg-gray-50 border-t border-gray-200">
    <!-- Add Account Form -->
    <%= form_with url: verification_accounts_path, method: :post, class: "space-y-3" do |f| %>
      <%= hidden_field_tag 'person_id', person.id %>
      <%= hidden_field_tag 'social_media_account[channel_type]', channel_type %>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
        <!-- Platform dropdown -->
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">Platform</label>
          <select name="social_media_account[platform]" required class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
            <option value="">Select platform...</option>
            <% SocialMediaAccount::PLATFORMS.each do |platform| %>
              <option value="<%= platform %>"><%= platform %></option>
            <% end %>
          </select>
        </div>

        <!-- URL input -->
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">URL</label>
          <input type="url" name="social_media_account[url]" required placeholder="https://..." class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
        </div>

        <!-- Notes textarea -->
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">Research Notes (optional)</label>
          <textarea name="social_media_account[research_notes]" rows="1" placeholder="Add notes..." class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500"></textarea>
        </div>
      </div>

      <div class="flex gap-2">
        <button type="submit" class="px-4 py-2 bg-purple-600 text-white text-sm rounded-md hover:bg-purple-700">Add Account</button>
        <button type="button" onclick="hideAddAccountForm('<%= channel_type.parameterize %>')" class="px-4 py-2 text-gray-600 text-sm hover:bg-gray-100 rounded-md">Cancel</button>
      </div>
    <% end %>
  </div>
</div>
