<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Assignment", verification_assignment_path(@assignment), class: "text-purple-600 hover:text-purple-800" %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= platform_icon(@account.platform, size: 28) %>
          <div>
            <h1 class="text-xl font-bold text-gray-900"><%= @account.platform %> Account</h1>
            <p class="text-gray-600"><%= @person.full_name %></p>
          </div>
        </div>
        <% if @account.has_revisions? %>
          <div class="relative" data-controller="dropdown">
            <button type="button"
                    data-action="click->dropdown#toggle"
                    class="flex items-center gap-1 px-3 py-1 text-sm bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= @account.version_count %> <%= "version".pluralize(@account.version_count) %>
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg border border-gray-200 p-4 z-50">
              <h3 class="text-sm font-semibold text-gray-900 mb-3">Version History</h3>
              <div class="space-y-2 max-h-64 overflow-y-auto">
                <% @account.versions.reverse.each_with_index do |version, index| %>
                  <div class="text-xs border-l-2 border-gray-300 pl-3 py-1">
                    <div class="font-medium text-gray-900">Version <%= @account.version_count - index %></div>
                    <div class="text-gray-500"><%= version.created_at.strftime("%b %d, %Y %I:%M%p") %></div>
                    <% if version.whodunnit %>
                      <div class="text-gray-600">By User #<%= version.whodunnit %></div>
                    <% end %>
                    <% if version.event == 'update' && version.changeset.present? %>
                      <div class="mt-1 text-gray-700">
                        <% version.changeset.each do |field, (old_val, new_val)| %>
                          <div class="text-xs">
                            <span class="font-medium"><%= field %>:</span>
                            <span class="text-red-600"><%= old_val.to_s.truncate(30) %></span> â†’
                            <span class="text-green-600"><%= new_val.to_s.truncate(30) %></span>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="p-6">
      <%= form_with model: @account, url: verification_account_path(@account), method: :patch, class: "space-y-4" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">URL</label>
          <%= f.url_field :url, class: "mt-1 block w-full rounded-lg border-gray-300 focus:border-purple-500 focus:ring-purple-500", placeholder: "https://..." %>
          <% if @account.url.present? %>
            <a href="<%= @account.url %>" target="_blank" class="text-xs text-blue-600 hover:text-blue-800 mt-1 inline-block">Open in new tab â†’</a>
          <% end %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Handle</label>
          <%= f.text_field :handle, class: "mt-1 block w-full rounded-lg border-gray-300 focus:border-purple-500 focus:ring-purple-500", placeholder: "@username" %>
        </div>

        <% if @account.entered_by %>
          <div class="text-sm text-gray-600 pt-2 border-t">
            Originally entered by <%= @account.entered_by.name.presence || @account.entered_by.email %> Â· <%= time_ago_in_words(@account.entered_at) %> ago
          </div>
        <% end %>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
          <p class="text-sm text-blue-800">
            <strong>Note:</strong> If you edit the URL or handle and click "Revise & Re-queue", this record will be marked as revised and queued for verification by another user.
          </p>
        </div>

        <div class="flex justify-between gap-3 pt-4 border-t">
          <div class="flex gap-2">
            <%= f.submit "ðŸ’¾ Revise & Re-queue", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer", data: { turbo_confirm: "This will save your changes and re-queue this record for verification by someone else. Continue?" } %>
            <%= link_to "Cancel", verification_assignment_path(@assignment), class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
          </div>
          <div class="flex gap-2">
            <%= button_to "âœ“ Verify as Correct", verify_verification_account_path(@account), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700", form: { data: { turbo_confirm: "Verify this account as correct?" } } %>
            <%= button_to "âœ— Reject", reject_verification_account_path(@account), method: :patch, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700", form: { data: { turbo_confirm: "Reject this account? You'll need to provide a reason." } } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
