<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Assignment", verification_assignment_path(@assignment), class: "text-purple-600 hover:text-purple-800" %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center gap-3">
        <%= platform_icon(@account.platform, size: 28) %>
        <div>
          <h1 class="text-xl font-bold text-gray-900"><%= @account.platform %> Account</h1>
          <p class="text-gray-600"><%= @person.full_name %></p>
        </div>
      </div>
    </div>

    <div class="p-6">
      <div class="mb-6">
        <div class="text-sm text-gray-500 mb-1">Current URL</div>
        <% if @account.url.present? %>
          <a href="<%= @account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= @account.url %></a>
        <% else %>
          <span class="text-gray-400">Not provided</span>
        <% end %>
      </div>

      <div class="mb-6">
        <div class="text-sm text-gray-500 mb-1">Handle</div>
        <% if @account.handle.present? %>
          <span class="text-gray-900">@<%= @account.handle %></span>
        <% else %>
          <span class="text-gray-400">Not provided</span>
        <% end %>
      </div>

      <% if @account.entered_by %>
        <div class="mb-6 text-sm text-gray-600">
          Entered by <%= @account.entered_by.name %> · <%= time_ago_in_words(@account.entered_at) %> ago
        </div>
      <% end %>

      <div class="flex justify-end gap-3 pt-4 border-t">
        <%= button_to "✓ Verify Account", verify_verification_account_path(@account), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
        <%= button_to "✗ Reject", reject_verification_account_path(@account), method: :patch, form: { data: { turbo_confirm: "Please provide a reason for rejection" } }, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
      </div>
    </div>
  </div>
</div>
