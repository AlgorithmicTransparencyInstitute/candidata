<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Assignment", verification_assignment_path(@assignment), class: "text-purple-600 hover:text-purple-800" %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center gap-3">
        <%= platform_icon(@account.platform, size: 28) %>
        <div>
          <h1 class="text-xl font-bold text-gray-900"><%= @account.platform %> Account</h1>
          <p class="text-gray-600"><%= @person.full_name %></p>
        </div>
      </div>
    </div>

    <div class="p-6">
      <%= form_with model: @account, url: verification_account_path(@account), method: :patch, class: "space-y-4" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">URL</label>
          <%= f.url_field :url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500", placeholder: "https://..." %>
          <% if @account.url.present? %>
            <a href="<%= @account.url %>" target="_blank" class="text-xs text-blue-600 hover:text-blue-800 mt-1 inline-block">Open in new tab →</a>
          <% end %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Handle</label>
          <%= f.text_field :handle, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500", placeholder: "@username" %>
        </div>

        <% if @account.entered_by %>
          <div class="text-sm text-gray-600 pt-2 border-t">
            Originally entered by <%= @account.entered_by.name.presence || @account.entered_by.email %> · <%= time_ago_in_words(@account.entered_at) %> ago
          </div>
        <% end %>

        <div class="flex justify-between gap-3 pt-4 border-t">
          <div class="flex gap-2">
            <%= f.submit "Save Changes", class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 cursor-pointer" %>
            <%= link_to "Cancel", verification_assignment_path(@assignment), class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
          </div>
          <div class="flex gap-2">
            <%= button_to "✓ Verify", verify_verification_account_path(@account), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700", form: { data: { turbo_confirm: "Verify this account as correct?" } } %>
            <%= button_to "✗ Reject", reject_verification_account_path(@account), method: :patch, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700", form: { data: { turbo_confirm: "Reject this account? You'll need to provide a reason." } } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
