<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">2026 Elections</h1>
      <p class="text-lg text-gray-600">Primary elections across the United States</p>
    </div>

    <!-- Upcoming Elections -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Upcoming Primaries</h2>

      <% if @upcoming_elections.any? %>
        <div class="space-y-4">
          <% @upcoming_elections.each do |election| %>
            <%= link_to election_path(election), class: "block bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-150" do %>
              <div class="p-6">
                <div class="flex items-start">
                  <!-- Date Badge -->
                  <div class="flex-shrink-0 w-20 h-20 bg-indigo-100 rounded-lg flex flex-col items-center justify-center mr-4">
                    <div class="text-xs font-semibold text-indigo-700 uppercase"><%= election.date.strftime('%b') %></div>
                    <div class="text-3xl font-bold text-indigo-900"><%= election.date.strftime('%d') %></div>
                    <div class="text-xs text-indigo-600"><%= election.date.strftime('%Y') %></div>
                  </div>

                  <!-- Election Details -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center justify-between mb-2">
                      <h3 class="text-xl font-semibold text-gray-900"><%= election.full_name %></h3>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                        <%= election.election_type.titleize %>
                      </span>
                    </div>

                    <div class="space-y-1 text-sm text-gray-600">
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <span><strong>Election Day:</strong> <%= election.date.strftime('%A, %B %d, %Y') %></span>
                      </div>

                      <% if election.registration_deadline %>
                        <div class="flex items-center">
                          <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <span><strong>Registration Deadline:</strong> <%= election.registration_deadline.strftime('%B %d, %Y') %></span>
                        </div>
                      <% end %>

                      <% if election.ballots.any? %>
                        <div class="flex items-center">
                          <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                          </svg>
                          <span><%= pluralize(election.ballots.count, 'party ballot') %> · <%= pluralize(election.ballots.sum { |b| b.contests.count }, 'contest') %></span>
                        </div>
                      <% end %>
                    </div>

                    <% if election.ballots.any? %>
                      <div class="mt-3 flex flex-wrap gap-2">
                        <% election.ballots.each do |ballot| %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-gray-100 text-gray-700">
                            <%= ballot.party %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>

                  <!-- Arrow -->
                  <div class="flex-shrink-0 ml-4">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No upcoming elections</h3>
          <p class="mt-1 text-sm text-gray-500">Check back later for election information.</p>
        </div>
      <% end %>
    </div>

    <!-- Past Elections -->
    <% if @past_elections.any? %>
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Past Elections</h2>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 divide-y divide-gray-200">
          <% @past_elections.each do |election| %>
            <%= link_to election_path(election), class: "block p-4 hover:bg-gray-50 transition-colors duration-150" do %>
              <div class="flex items-center justify-between">
                <div class="flex items-center flex-1 min-w-0">
                  <div class="flex-shrink-0 w-16 text-center">
                    <div class="text-sm font-medium text-gray-900"><%= election.date.strftime('%b %d') %></div>
                    <div class="text-xs text-gray-500"><%= election.date.strftime('%Y') %></div>
                  </div>
                  <div class="ml-4 flex-1 min-w-0">
                    <div class="text-sm font-medium text-gray-900"><%= election.full_name %></div>
                    <div class="text-sm text-gray-500">
                      <% if election.ballots.any? %>
                        <%= pluralize(election.ballots.count, 'ballot') %> · <%= pluralize(election.ballots.sum { |b| b.contests.count }, 'contest') %>
                      <% else %>
                        No ballots
                      <% end %>
                    </div>
                  </div>
                </div>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </main>
</div>
