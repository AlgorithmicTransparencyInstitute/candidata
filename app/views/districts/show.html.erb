<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="mb-4">
      <%= link_to "â† Back to Districts", districts_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
    </div>

    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <h1 class="text-3xl font-bold text-gray-900"><%= @district.full_name %></h1>
      
      <div class="mt-3 flex flex-wrap gap-3">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
          <%= case @district.level
              when 'federal' then 'bg-purple-100 text-purple-800'
              when 'state' then 'bg-blue-100 text-blue-800'
              when 'local' then 'bg-green-100 text-green-800'
              end %>">
          <%= @district.level.titleize %>
        </span>
        <% if @district.chamber.present? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 capitalize">
            <%= @district.chamber %> chamber
          </span>
        <% end %>
        <%= link_to state_path(@district.state), class: "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 hover:bg-indigo-200" do %>
          <%= @district.state %>
        <% end %>
      </div>

      <% if @district.ocdid.present? %>
        <div class="mt-4 text-sm text-gray-500">
          <span class="font-medium">OCD-ID:</span> <code class="bg-gray-100 px-2 py-0.5 rounded text-xs"><%= @district.ocdid %></code>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Current Representatives -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Current Representatives</h2>
          </div>
          
          <% if @current_representatives.any? %>
            <div class="divide-y divide-gray-200">
              <% @current_representatives.each do |officeholder| %>
                <div class="px-6 py-4">
                  <div class="flex items-center gap-4">
                    <% if officeholder.person.photo_url.present? %>
                      <img src="<%= officeholder.person.photo_url %>" alt="" class="w-16 h-16 rounded-full object-cover">
                    <% else %>
                      <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center">
                        <span class="text-gray-500 font-medium text-xl"><%= officeholder.person.first_name.first %><%= officeholder.person.last_name.first %></span>
                      </div>
                    <% end %>
                    <div class="flex-1">
                      <%= link_to officeholder.person.full_name, person_path(officeholder.person), class: "text-lg font-medium text-indigo-600 hover:text-indigo-900" %>
                      <% if officeholder.person.primary_party %>
                        <div class="text-sm text-gray-500"><%= officeholder.person.primary_party.name %></div>
                      <% end %>
                      <div class="mt-1 text-sm text-gray-500">
                        <%= link_to officeholder.office.title, office_path(officeholder.office), class: "hover:text-indigo-600" %>
                      </div>
                    </div>
                    <div class="text-right text-sm text-gray-500">
                      <div>Since <%= officeholder.start_date.strftime('%b %Y') %></div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="px-6 py-8 text-center text-gray-500">
              No current representatives found for this district.
            </div>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">District Details</h3>
          <dl class="space-y-3 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500">State</dt>
              <dd class="font-medium text-gray-900"><%= @district.state %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Level</dt>
              <dd class="font-medium text-gray-900 capitalize"><%= @district.level %></dd>
            </div>
            <% if @district.district_number.present? %>
              <div class="flex justify-between">
                <dt class="text-gray-500">District Number</dt>
                <dd class="font-medium text-gray-900"><%= @district.district_number %></dd>
              </div>
            <% end %>
            <% if @district.chamber.present? %>
              <div class="flex justify-between">
                <dt class="text-gray-500">Chamber</dt>
                <dd class="font-medium text-gray-900 capitalize"><%= @district.chamber %></dd>
              </div>
            <% end %>
            <div class="flex justify-between">
              <dt class="text-gray-500">Offices</dt>
              <dd class="font-medium text-gray-900"><%= @offices.count %></dd>
            </div>
          </dl>
        </div>

        <% if @offices.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Offices</h3>
            <ul class="space-y-2">
              <% @offices.each do |office| %>
                <li>
                  <%= link_to office.title, office_path(office), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
