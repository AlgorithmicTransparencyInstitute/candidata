<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Districts</h1>
      <p class="mt-1 text-sm text-gray-500">Browse <%= number_with_delimiter(District.count) %> electoral districts</p>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
      <%= form_with url: districts_path, method: :get, local: true, class: "space-y-4" do |f| %>
        <div class="flex gap-4">
          <div class="flex-1">
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <input type="text" name="q" value="<%= params[:q] %>" 
                     class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                     placeholder="Search by state or district number...">
            </div>
          </div>
          <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
            Search
          </button>
          <% if request.query_parameters.any? %>
            <%= link_to "Clear", districts_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div>
            <label for="state" class="block text-xs font-medium text-gray-700 mb-1">State</label>
            <select name="state" id="state" class="block w-full pl-3 pr-10 py-2 text-sm border-gray-300 rounded-md">
              <option value="">All States</option>
              <% @states.each do |state| %>
                <option value="<%= state %>" <%= 'selected' if params[:state] == state %>><%= state %></option>
              <% end %>
            </select>
          </div>

          <div>
            <label for="level" class="block text-xs font-medium text-gray-700 mb-1">Level</label>
            <select name="level" id="level" class="block w-full pl-3 pr-10 py-2 text-sm border-gray-300 rounded-md">
              <option value="">All Levels</option>
              <% @levels.each do |level| %>
                <option value="<%= level %>" <%= 'selected' if params[:level] == level %>><%= level.titleize %></option>
              <% end %>
            </select>
          </div>

          <% if @chambers.any? %>
            <div>
              <label for="chamber" class="block text-xs font-medium text-gray-700 mb-1">Chamber</label>
              <select name="chamber" id="chamber" class="block w-full pl-3 pr-10 py-2 text-sm border-gray-300 rounded-md">
                <option value="">All Chambers</option>
                <% @chambers.each do |chamber| %>
                  <option value="<%= chamber %>" <%= 'selected' if params[:chamber] == chamber %>><%= chamber.titleize %></option>
                <% end %>
              </select>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Results -->
    <div class="flex justify-between items-center mb-4">
      <p class="text-sm text-gray-700">
        Showing <span class="font-medium"><%= @districts.offset_value + 1 %></span> to 
        <span class="font-medium"><%= [@districts.offset_value + @districts.length, @districts.total_count].min %></span> of 
        <span class="font-medium"><%= number_with_delimiter(@districts.total_count) %></span> results
      </p>
    </div>

    <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">District</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">State</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Level</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Chamber</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Offices</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @districts.each do |district| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to district.full_name, district_path(district), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to district.state, state_path(district.state), class: "text-sm text-gray-900 hover:text-indigo-600" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                  <%= case district.level
                      when 'federal' then 'bg-purple-100 text-purple-800'
                      when 'state' then 'bg-blue-100 text-blue-800'
                      when 'local' then 'bg-green-100 text-green-800'
                      end %>">
                  <%= district.level.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= district.chamber&.titleize || 'â€”' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= district.offices.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @districts.total_pages > 1 %>
      <div class="mt-6 flex justify-center">
        <%= paginate @districts %>
      </div>
    <% end %>
  </main>
</div>
