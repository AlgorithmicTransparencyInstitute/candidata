<div class="flex flex-col h-screen">
  <!-- Breadcrumb -->
  <div class="px-4 py-1 bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto">
      <nav class="flex text-sm">
        <%= link_to "Assignments", admin_assignments_path, class: "text-gray-600 hover:text-gray-900" %>
        <span class="mx-2 text-gray-400">/</span>
        <span class="text-gray-900">Create Assignments</span>
      </nav>
    </div>
  </div>

  <% if flash[:alert].present? %>
    <div class="px-4 py-2 bg-red-50 border-b border-red-200">
      <div class="max-w-7xl mx-auto text-sm text-red-800"><%= flash[:alert] %></div>
    </div>
  <% end %>

  <%= form_with url: admin_assignments_path, method: :post, id: "assignmentForm", class: "flex-1 flex flex-col overflow-hidden" do %>
    <div class="flex-1 overflow-y-auto">
      <div class="max-w-7xl mx-auto px-4 py-3 space-y-3">

        <!-- Step 1: Assignment Settings -->
        <div class="bg-white rounded-lg shadow">
          <div class="bg-indigo-600 text-white px-4 py-2 text-sm font-medium rounded-t-lg">
            Step 1: Assignment Settings
          </div>
          <div class="p-4">
            <div class="grid md:grid-cols-2 gap-4">
              <!-- Researcher Selection -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Researcher</label>

                <!-- Researcher Filters -->
                <div class="mb-2 space-y-1">
                  <input type="text" id="researcher-search" placeholder="Search name/email..."
                         class="w-full text-xs rounded border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
                  <select id="researcher-workload-filter" class="w-full text-xs rounded border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
                    <option value="">All researchers</option>
                    <option value="no-active">No active tasks</option>
                    <option value="light-load">Light load (1-9)</option>
                    <option value="heavy-load">Heavy load (10+)</option>
                  </select>
                </div>

                <div class="space-y-2 max-h-64 overflow-y-auto border border-gray-200 rounded-lg p-3" id="researcher-list">
                  <% @researchers.each do |researcher| %>
                    <% workload = @researcher_workloads[researcher.id] || 0 %>
                    <label class="researcher-item flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors"
                           data-researcher-name="<%= (researcher.name.presence || researcher.email).downcase %>"
                           data-researcher-email="<%= researcher.email.downcase %>"
                           data-workload="<%= workload %>">
                      <input type="radio" name="user_id" value="<%= researcher.id %>"
                             class="text-blue-600 focus:ring-blue-500"
                             <%= 'checked' if @selected_researcher_id.to_s == researcher.id.to_s %>
                             required>
                      <div class="flex-1 min-w-0">
                        <div class="font-medium text-gray-900 text-sm truncate">
                          <%= researcher.name.presence || researcher.email %>
                        </div>
                        <% if researcher.name.present? %>
                          <div class="text-xs text-gray-500 truncate"><%= researcher.email %></div>
                        <% end %>
                      </div>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        <%= workload == 0 ? 'bg-green-100 text-green-800' : workload < 10 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                        <%= workload %> active
                      </span>
                    </label>
                  <% end %>
                  <% if @researchers.empty? %>
                    <div class="text-center text-gray-500 py-4 text-sm">No researchers found. <br><%= link_to "Invite one first", new_admin_invitation_path, class: "text-blue-600 hover:text-blue-800" %>.</div>
                  <% end %>
                </div>
              </div>

              <!-- Task Type Selection -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Task Type</label>
                <div class="space-y-2">
                  <label class="flex items-center gap-3 p-3 rounded-lg border-2 cursor-pointer transition-colors task-type-option
                    <%= @task_type == 'data_collection' ? 'border-blue-500 bg-blue-50' : 'border-gray-200 hover:border-gray-300' %>">
                    <input type="radio" name="task_type" value="data_collection"
                           class="text-blue-600 focus:ring-blue-500"
                           <%= 'checked' if @task_type == 'data_collection' %>>
                    <div>
                      <div class="font-medium text-gray-900 text-sm">Data Collection</div>
                      <div class="text-xs text-gray-500">Find social media accounts</div>
                    </div>
                  </label>
                  <label class="flex items-center gap-3 p-3 rounded-lg border-2 cursor-pointer transition-colors task-type-option
                    <%= @task_type == 'data_validation' ? 'border-purple-500 bg-purple-50' : 'border-gray-200 hover:border-gray-300' %>">
                    <input type="radio" name="task_type" value="data_validation"
                           class="text-purple-600 focus:ring-purple-500"
                           <%= 'checked' if @task_type == 'data_validation' %>>
                    <div>
                      <div class="font-medium text-gray-900 text-sm">Data Validation</div>
                      <div class="text-xs text-gray-500">Verify collected accounts</div>
                    </div>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2: Filter & Select People -->
        <div class="bg-white rounded-lg shadow flex-1 flex flex-col">
          <div class="bg-indigo-600 text-white px-4 py-2 text-sm font-medium rounded-t-lg flex items-center justify-between">
            <span>Step 2: Filter & Select People</span>
            <% if params[:q].present? || params[:state].present? || params[:party_id].present? || params[:body_id].present? || params[:level].present? || params[:role_filter].present? || params[:year].present? || params[:ballot_id].present? || params[:contest_id].present? || params[:assignment_filter].present? %>
              <%= link_to "Clear filters", new_admin_assignment_path(user_id: params[:user_id], task_type: params[:task_type]), class: "text-xs text-white underline hover:no-underline" %>
            <% end %>
          </div>

          <div class="p-4 border-b">
            <!-- Filter Controls in One Row -->
            <div class="flex gap-2 items-center">
              <!-- Search (smaller) -->
              <div class="relative w-48">
                <input type="text" name="q" id="q_filter" value="<%= params[:q] %>" placeholder="Search name..."
                       class="w-full text-sm rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 pr-8"
                       onkeydown="if(event.key==='Enter'){event.preventDefault();applyFilters();}">
                <button type="button" onclick="applyFilters();"
                        class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 text-xs">
                  üîç
                </button>
              </div>

              <!-- Demographics Dropdown -->
              <div class="relative inline-block flex-1">
                <button type="button" onclick="toggleDropdown('demographics')" class="w-full px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 flex items-center justify-between">
                  <span>Demographics</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div id="demographics-dropdown" class="hidden absolute z-10 mt-1 w-full bg-white rounded-md shadow-lg border border-gray-200 p-3">
                  <div class="space-y-2">
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">State</label>
                      <%= select_tag :state, options_for_select([['All States', '']] + @states.map { |s| [s, s] }, params[:state]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "applyFilters()", id: "state_filter" %>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">Party</label>
                      <%= select_tag :party_id, options_for_select([['All Parties', '']] + @parties.map { |p| [p.name, p.id] }, params[:party_id]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "applyFilters()", id: "party_filter" %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Office Dropdown -->
              <div class="relative inline-block flex-1">
                <button type="button" onclick="toggleDropdown('office')" class="w-full px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 flex items-center justify-between">
                  <span>Office</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div id="office-dropdown" class="hidden absolute z-10 mt-1 w-full bg-white rounded-md shadow-lg border border-gray-200 p-3">
                  <div class="space-y-2">
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">Body</label>
                      <%= select_tag :body_id, options_for_select([['All Bodies', '']] + @bodies.map { |b| [b.name, b.id] }, params[:body_id]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "applyFilters()", id: "body_filter" %>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">Level</label>
                      <%= select_tag :level, options_for_select([['All Levels', '']] + @levels.map { |l| [l.titleize, l] }, params[:level]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "applyFilters()", id: "level_filter" %>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">Role</label>
                      <%= select_tag :role_filter, options_for_select([['All', ''], ['Current Officeholders', 'officeholders'], ['Candidates', 'candidates']], params[:role_filter]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "applyFilters()", id: "role_filter" %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Election Dropdown -->
              <div class="relative inline-block flex-1">
                <button type="button" onclick="toggleDropdown('election')" class="w-full px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 flex items-center justify-between">
                  <span>Election</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div id="election-dropdown" class="hidden absolute z-10 mt-1 w-full bg-white rounded-md shadow-lg border border-gray-200 p-3">
                  <div class="space-y-2">
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">Year</label>
                      <%= select_tag :year, options_for_select([['All Years', '']] + @years.map { |y| [y, y] }, params[:year]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "handleYearChange()", id: "year_filter" %>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">Ballot</label>
                      <%= select_tag :ballot_id, options_for_select([['All Ballots', '']] + @ballots.map { |b| [b.full_name, b.id] }, params[:ballot_id]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "handleBallotChange()", id: "ballot_filter" %>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-700 mb-1">Contest</label>
                      <%= select_tag :contest_id, options_for_select([['All Contests', '']] + @contests.map { |c| [c.full_name, c.id] }, params[:contest_id]),
                          class: "w-full rounded text-xs border-gray-300", onchange: "applyFilters()", id: "contest_filter" %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Assignments Dropdown (right-aligned) -->
              <div class="relative inline-block flex-1">
                <button type="button" onclick="toggleDropdown('assignment_status')" class="w-full px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 flex items-center justify-between">
                  <span>Assignments</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div id="assignment_status-dropdown" class="hidden absolute z-10 mt-1 right-0 w-64 bg-white rounded-md shadow-lg border border-gray-200 p-3">
                  <label class="block text-xs font-medium text-gray-700 mb-1">Assignment Status</label>
                  <%= select_tag :assignment_filter, options_for_select([
                        ['All People', ''],
                        ['Unassigned (no tasks)', 'unassigned'],
                        ['No Data Collection', 'no_collection'],
                        ['No Data Validation', 'no_validation']
                      ], params[:assignment_filter]),
                      class: "w-full rounded text-xs border-gray-300", onchange: "applyFilters()", id: "assignment_filter" %>
                </div>
              </div>
            </div>
          </div>

          <%= turbo_frame_tag "people_list", data: { turbo_action: "advance" } do %>
            <!-- People List with integrated stats and filter info -->
            <div class="px-4 py-3 border-b bg-gray-50 flex items-center justify-between">
              <div class="text-sm">
                <span class="font-medium text-gray-900"><span id="selected-count">0</span> selected</span>
                <span class="text-gray-500 mx-2">¬∑</span>
                <span class="text-gray-600"><%= @people.total_count %> total</span>
                <% active_filters = [] %>
                <% active_filters << "Name: \"#{params[:q]}\"" if params[:q].present? %>
                <% active_filters << "State: #{params[:state]}" if params[:state].present? %>
                <% active_filters << "Party: #{@parties.find { |p| p.id.to_s == params[:party_id].to_s }&.name}" if params[:party_id].present? %>
                <% active_filters << "Body: #{@bodies.find { |b| b.id.to_s == params[:body_id].to_s }&.name}" if params[:body_id].present? %>
                <% active_filters << "Level: #{params[:level].titleize}" if params[:level].present? %>
                <% active_filters << "Role: #{params[:role_filter].humanize}" if params[:role_filter].present? %>
                <% active_filters << "Year: #{params[:year]}" if params[:year].present? %>
                <% active_filters << "Ballot: #{@ballots.find { |b| b.id.to_s == params[:ballot_id].to_s }&.full_name}" if params[:ballot_id].present? %>
                <% active_filters << "Contest: #{@contests.find { |c| c.id.to_s == params[:contest_id].to_s }&.full_name}" if params[:contest_id].present? %>
                <% active_filters << "Assignment: #{params[:assignment_filter].humanize}" if params[:assignment_filter].present? %>
                <% if active_filters.any? %>
                  <span class="text-gray-500 mx-2">¬∑</span>
                  <span class="text-blue-600 text-xs"><%= active_filters.join(" ‚Ä¢ ") %></span>
                <% end %>
              </div>
              <label class="flex items-center gap-2 text-sm">
                <input type="checkbox" id="selectAll" class="rounded border-gray-300 text-indigo-600">
                <span class="text-gray-700">Select all</span>
              </label>
            </div>

            <!-- Quick Filters for People List -->
            <div class="px-4 py-2 border-b bg-white flex gap-2 text-xs">
              <input type="text" id="people-search" placeholder="Filter by name..." class="flex-1 text-xs rounded border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
              <select id="people-filter" class="text-xs rounded border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
                <option value="">All people</option>
                <option value="no-collection">No pending collection</option>
                <option value="no-validation">No pending validation</option>
                <option value="no-pending">No pending (any)</option>
              </select>
            </div>

            <div class="flex-1 overflow-y-auto divide-y divide-gray-200" id="people-list">
              <% if @people.any? %>
                <% @people.each do |person| %>
                  <% existing_assignments = person.assignments.select { |a| %w[pending in_progress].include?(a.status) } %>
                  <% has_collection = existing_assignments.any? { |a| a.task_type == 'data_collection' } %>
                  <% has_validation = existing_assignments.any? { |a| a.task_type == 'data_validation' } %>
                  <%
                    current_oh = person.officeholders.detect { |oh| oh.end_date.nil? }
                    candidate_2026 = person.candidates.joins(:contest).where('contests.date >= ?', Date.new(2026, 1, 1)).first
                    populated_accounts = person.social_media_accounts.where.not(url: [nil, '']).count
                    total_accounts = person.social_media_accounts.count
                    has_website = person.website_campaign.present? || person.website_official.present?
                  %>
                  <label class="px-4 py-2 flex items-center gap-3 hover:bg-gray-50 cursor-pointer person-item"
                         data-name="<%= person.full_name.downcase %>"
                         data-has-collection="<%= has_collection %>"
                         data-has-validation="<%= has_validation %>">
                    <input type="checkbox" name="person_ids[]" value="<%= person.id %>"
                           class="person-checkbox rounded border-gray-300 text-indigo-600">

                    <!-- Photo or Initials -->
                    <div class="w-8 h-8 rounded-full flex-shrink-0 flex items-center justify-center text-xs font-semibold
                                <%= person.primary_party&.abbreviation == 'D' ? 'bg-blue-100 text-blue-700' :
                                    person.primary_party&.abbreviation == 'R' ? 'bg-red-100 text-red-700' :
                                    'bg-gray-200 text-gray-600' %>">
                      <% if person.photo_url.present? %>
                        <%= image_tag person.photo_url, class: "w-8 h-8 rounded-full object-cover", alt: person.full_name %>
                      <% else %>
                        <%= person.first_name[0] %><%= person.last_name[0] %>
                      <% end %>
                    </div>

                    <div class="flex-1 min-w-0">
                      <div class="flex items-center gap-2 mb-0.5">
                        <span class="font-medium text-sm"><%= person.full_name %></span>
                        <% if person.primary_party %>
                          <span class="px-1.5 py-0.5 text-xs rounded <%= person.primary_party.abbreviation == 'D' ? 'bg-blue-100 text-blue-700' : person.primary_party.abbreviation == 'R' ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-600' %>"><%= person.primary_party.abbreviation %></span>
                        <% end %>
                        <% if has_website %>
                          <span class="text-xs text-green-600" title="Has website">üåê</span>
                        <% end %>
                      </div>
                      <div class="text-xs text-gray-600 truncate">
                        <%= person.state_of_residence || "Unknown state" %>
                        <% if current_oh&.office %>
                          ¬∑ Current: <%= current_oh.office.title %><%= " (#{current_oh.office.seat})" if current_oh.office.seat.present? %>
                        <% end %>
                      </div>
                      <div class="text-xs text-gray-500">
                        Accounts: <%= populated_accounts %>/<%= total_accounts %> populated
                      </div>
                    </div>

                    <div class="flex items-center gap-2 shrink-0">
                      <% existing_assignments.each do |a| %>
                        <span class="px-2 py-0.5 text-xs rounded-full
                          <%= a.task_type == 'data_collection' ? 'bg-blue-100 text-blue-700' : 'bg-purple-100 text-purple-700' %>">
                          <%= a.task_type == 'data_collection' ? 'DC' : 'DV' %>
                        </span>
                      <% end %>
                      <% if existing_assignments.empty? %>
                        <span class="text-xs text-gray-400">‚Äî</span>
                      <% end %>
                    </div>
                  </label>
                <% end %>
              <% else %>
                <div class="px-4 py-12 text-center text-gray-500 text-sm">
                  No people match the current filters.
                </div>
              <% end %>
            </div>

            <% if @people.total_pages > 1 %>
              <div class="border-t border-gray-200 px-4 py-2 text-xs text-gray-600 text-center">
                Page <%= @people.current_page %> of <%= @people.total_pages %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Fixed Bottom Bar -->
    <div class="border-t bg-white px-4 py-3 flex-shrink-0">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="text-sm text-gray-600" id="submitSummary"></div>
        <div class="flex gap-3">
          <%= link_to "Cancel", admin_assignments_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
          <button type="submit" id="submitBtn"
                  class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer font-medium disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled>
            Create Assignments
          </button>
        </div>
      </div>
    </div>

  <% end %>
</div>

<script>
  // Select all functionality
  const selectAllCheckbox = document.getElementById('selectAll');
  const selectedCount = document.getElementById('selected-count');

  function updateSelectedCount() {
    const visibleCheckboxes = document.querySelectorAll('.person-item:not([style*="display: none"]) .person-checkbox');
    const checkedCount = document.querySelectorAll('.person-item:not([style*="display: none"]) .person-checkbox:checked').length;
    selectedCount.textContent = checkedCount;
    updateSubmitButton();
  }

  function updateSubmitButton() {
    const checked = document.querySelectorAll('.person-checkbox:checked').length;
    const btn = document.getElementById('submitBtn');
    const researcher = document.querySelector('input[name="user_id"]:checked');
    const taskType = document.querySelector('input[name="task_type"]:checked');

    if (btn) btn.disabled = !(checked > 0 && researcher && taskType);

    const summary = document.getElementById('submitSummary');
    if (summary) {
      if (checked > 0 && researcher && taskType) {
        const name = researcher.closest('label').querySelector('.font-medium').textContent.trim();
        const type = taskType.value === 'data_collection' ? 'Data Collection' : 'Data Validation';
        summary.textContent = `Assign ${checked} ${checked === 1 ? 'person' : 'people'} to ${name} for ${type}`;
      } else {
        summary.textContent = '';
      }
    }
  }

  if (selectAllCheckbox) {
    selectAllCheckbox.addEventListener('change', function() {
      document.querySelectorAll('.person-item:not([style*="display: none"]) .person-checkbox').forEach(cb => {
        cb.checked = this.checked;
      });
      updateSelectedCount();
    });
  }

  document.querySelectorAll('.person-checkbox').forEach(cb => {
    cb.addEventListener('change', updateSelectedCount);
  });

  // People quick filters
  const peopleSearch = document.getElementById('people-search');
  const peopleFilter = document.getElementById('people-filter');
  const peopleItems = document.querySelectorAll('.person-item');

  function applyPeopleFilters() {
    const searchTerm = peopleSearch.value.toLowerCase();
    const filterValue = peopleFilter.value;

    peopleItems.forEach(item => {
      const name = item.dataset.name;
      const hasCollection = item.dataset.hasCollection === 'true';
      const hasValidation = item.dataset.hasValidation === 'true';

      let matchesSearch = !searchTerm || name.includes(searchTerm);
      let matchesFilter = true;

      if (filterValue === 'no-collection') {
        matchesFilter = !hasCollection;
      } else if (filterValue === 'no-validation') {
        matchesFilter = !hasValidation;
      } else if (filterValue === 'no-pending') {
        matchesFilter = !hasCollection && !hasValidation;
      }

      item.style.display = (matchesSearch && matchesFilter) ? '' : 'none';
    });

    updateSelectedCount();
  }

  if (peopleSearch) peopleSearch.addEventListener('input', applyPeopleFilters);
  if (peopleFilter) peopleFilter.addEventListener('change', applyPeopleFilters);

  // Researcher quick filters
  const researcherSearch = document.getElementById('researcher-search');
  const researcherWorkloadFilter = document.getElementById('researcher-workload-filter');
  const researcherItems = document.querySelectorAll('.researcher-item');

  function applyResearcherFilters() {
    const searchTerm = researcherSearch.value.toLowerCase();
    const filterValue = researcherWorkloadFilter.value;

    researcherItems.forEach(item => {
      const name = item.dataset.researcherName;
      const email = item.dataset.researcherEmail;
      const workload = parseInt(item.dataset.workload);

      let matchesSearch = !searchTerm || name.includes(searchTerm) || email.includes(searchTerm);
      let matchesFilter = true;

      if (filterValue === 'no-active') {
        matchesFilter = workload === 0;
      } else if (filterValue === 'light-load') {
        matchesFilter = workload >= 1 && workload <= 9;
      } else if (filterValue === 'heavy-load') {
        matchesFilter = workload >= 10;
      }

      item.style.display = (matchesSearch && matchesFilter) ? '' : 'none';
    });
  }

  if (researcherSearch) researcherSearch.addEventListener('input', applyResearcherFilters);
  if (researcherWorkloadFilter) researcherWorkloadFilter.addEventListener('change', applyResearcherFilters);

  // Researcher and task type radios
  document.querySelectorAll('input[name="task_type"]').forEach(radio => {
    radio.addEventListener('change', function() {
      document.querySelectorAll('.task-type-option').forEach(opt => {
        opt.classList.remove('border-blue-500', 'bg-blue-50', 'border-purple-500', 'bg-purple-50');
        opt.classList.add('border-gray-200');
      });
      const label = this.closest('label');
      label.classList.remove('border-gray-200');
      if (this.value === 'data_collection') {
        label.classList.add('border-blue-500', 'bg-blue-50');
      } else {
        label.classList.add('border-purple-500', 'bg-purple-50');
      }
      updateSubmitButton();
    });
  });

  document.querySelectorAll('input[name="user_id"]').forEach(radio => {
    radio.addEventListener('change', updateSubmitButton);
  });

  // Dropdown toggle
  function toggleDropdown(id) {
    const dropdown = document.getElementById(id + '-dropdown');
    const allDropdowns = document.querySelectorAll('[id$="-dropdown"]');

    allDropdowns.forEach(d => {
      if (d.id !== id + '-dropdown') {
        d.classList.add('hidden');
      }
    });

    dropdown.classList.toggle('hidden');
  }

  document.addEventListener('click', function(event) {
    if (!event.target.closest('button[onclick^="toggleDropdown"]') &&
        !event.target.closest('[id$="-dropdown"]')) {
      document.querySelectorAll('[id$="-dropdown"]').forEach(d => d.classList.add('hidden'));
    }
  });

  // Helper function to get all filter values
  function getFilterParams() {
    const params = new URLSearchParams();
    const userId = document.querySelector('input[name="user_id"]:checked')?.value;
    const taskType = document.querySelector('input[name="task_type"]:checked')?.value;

    if (userId) params.set('user_id', userId);
    if (taskType) params.set('task_type', taskType);

    const filters = {
      q: 'q_filter',
      state: 'state_filter',
      party_id: 'party_filter',
      body_id: 'body_filter',
      level: 'level_filter',
      role_filter: 'role_filter',
      year: 'year_filter',
      ballot_id: 'ballot_filter',
      contest_id: 'contest_filter',
      assignment_filter: 'assignment_filter'
    };

    for (const [param, elementId] of Object.entries(filters)) {
      const element = document.getElementById(elementId);
      if (element && element.value) {
        params.set(param, element.value);
      }
    }

    return params;
  }

  // Instant filter function
  function applyFilters() {
    const params = getFilterParams();
    const frame = document.querySelector('turbo-frame[id="people_list"]');
    if (frame) {
      const url = `/admin/assignments/new?${params.toString()}`;
      frame.src = url;
    }
  }

  // Handle year changes - update ballot and contest dropdowns
  function handleYearChange() {
    const params = getFilterParams();

    fetch(`/admin/assignments/new?${params.toString()}`, {
      headers: { 'Accept': 'application/json' }
    })
    .then(response => response.json())
    .then(data => {
      updateBallotOptions(data.ballots);
      updateContestOptions([]);
      applyFilters();
    })
    .catch(error => {
      console.error('Error fetching ballots:', error);
      applyFilters();
    });
  }

  // Handle ballot changes - update contest dropdown
  function handleBallotChange() {
    const params = getFilterParams();

    fetch(`/admin/assignments/new?${params.toString()}`, {
      headers: { 'Accept': 'application/json' }
    })
    .then(response => response.json())
    .then(data => {
      updateContestOptions(data.contests);
      applyFilters();
    })
    .catch(error => {
      console.error('Error fetching contests:', error);
      applyFilters();
    });
  }

  function updateBallotOptions(ballots) {
    const select = document.getElementById('ballot_filter');
    select.innerHTML = '<option value="">All Ballots</option>';
    ballots.forEach(ballot => {
      const option = document.createElement('option');
      option.value = ballot.id;
      option.textContent = ballot.full_name;
      select.appendChild(option);
    });
  }

  function updateContestOptions(contests) {
    const select = document.getElementById('contest_filter');
    select.innerHTML = '<option value="">All Contests</option>';
    contests.forEach(contest => {
      const option = document.createElement('option');
      option.value = contest.id;
      option.textContent = contest.full_name;
      select.appendChild(option);
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    updateSelectedCount();
    updateSubmitButton();
  });

  // Reinitialize after Turbo frame loads
  document.addEventListener('turbo:frame-load', function() {
    // Reattach event listeners to checkboxes
    document.querySelectorAll('.person-checkbox').forEach(cb => {
      cb.addEventListener('change', updateSelectedCount);
    });
    updateSelectedCount();
  });
</script>
