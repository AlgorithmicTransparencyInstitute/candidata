<div class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Create Assignments</h1>

  <% if flash[:alert].present? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded text-red-800"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: admin_assignments_path, method: :post, id: "assignmentForm" do %>

    <!-- Step 1: Select Researcher & Task Type -->
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Step 1: Select Researcher & Task Type</h2>
      </div>
      <div class="p-6">
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Researcher</label>
            <div class="space-y-2 max-h-64 overflow-y-auto border border-gray-200 rounded-lg p-3">
              <% @researchers.each do |researcher| %>
                <% workload = @researcher_workloads[researcher.id] || 0 %>
                <label class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors">
                  <input type="radio" name="user_id" value="<%= researcher.id %>"
                         class="text-blue-600 focus:ring-blue-500"
                         <%= 'checked' if @selected_researcher_id.to_s == researcher.id.to_s %>
                         required>
                  <div class="flex-1 min-w-0">
                    <div class="font-medium text-gray-900 truncate">
                      <%= researcher.name.presence || researcher.email %>
                    </div>
                    <% if researcher.name.present? %>
                      <div class="text-xs text-gray-500 truncate"><%= researcher.email %></div>
                    <% end %>
                  </div>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= workload == 0 ? 'bg-green-100 text-green-800' : workload < 10 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                    <%= workload %> active
                  </span>
                </label>
              <% end %>
              <% if @researchers.empty? %>
                <div class="text-center text-gray-500 py-4">No researchers found. <br><%= link_to "Invite one first", new_admin_invitation_path, class: "text-blue-600 hover:text-blue-800" %>.</div>
              <% end %>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Task Type</label>
            <div class="space-y-2">
              <label class="flex items-center gap-3 p-3 rounded-lg border-2 cursor-pointer transition-colors task-type-option
                <%= @task_type == 'data_collection' ? 'border-blue-500 bg-blue-50' : 'border-gray-200 hover:border-gray-300' %>">
                <input type="radio" name="task_type" value="data_collection"
                       class="text-blue-600 focus:ring-blue-500"
                       <%= 'checked' if @task_type == 'data_collection' %>>
                <div>
                  <div class="font-medium text-gray-900">Data Collection</div>
                  <div class="text-sm text-gray-500">Find social media accounts for each person</div>
                </div>
              </label>
              <label class="flex items-center gap-3 p-3 rounded-lg border-2 cursor-pointer transition-colors task-type-option
                <%= @task_type == 'data_validation' ? 'border-purple-500 bg-purple-50' : 'border-gray-200 hover:border-gray-300' %>">
                <input type="radio" name="task_type" value="data_validation"
                       class="text-purple-600 focus:ring-purple-500"
                       <%= 'checked' if @task_type == 'data_validation' %>>
                <div>
                  <div class="font-medium text-gray-900">Data Validation</div>
                  <div class="text-sm text-gray-500">Verify collected social media accounts</div>
                </div>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 2: Filter & Select People -->
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Step 2: Select People to Assign</h2>
      </div>

      <!-- Filters -->
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-sm font-semibold text-gray-900">Filter People</h3>
          <% if params[:q].present? || params[:state].present? || params[:party_id].present? || params[:body_id].present? || params[:level].present? || params[:role_filter].present? || params[:year].present? || params[:ballot_id].present? || params[:contest_id].present? || params[:assignment_filter].present? %>
            <%= link_to "Clear all filters", new_admin_assignment_path(user_id: params[:user_id], task_type: params[:task_type]), class: "text-sm text-blue-600 hover:text-blue-800" %>
          <% end %>
        </div>

        <!-- Filter Controls in One Row -->
        <div class="flex flex-wrap gap-2 mb-4">
          <!-- Search -->
          <div class="relative flex-1 min-w-[200px]">
            <input type="text" name="q" id="q_filter" value="<%= params[:q] %>" placeholder="Search by name..."
                   class="w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 pr-8"
                   onkeydown="if(event.key==='Enter'){event.preventDefault();applyFilters();}">
            <button type="button" onclick="applyFilters();"
                    class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600">
              üîç
            </button>
          </div>

          <!-- Demographics Dropdown -->
          <div class="relative inline-block">
            <button type="button" onclick="toggleAssignmentDropdown('demographics')" class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center gap-2">
              Demographics
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div id="demographics-assignment-dropdown" class="hidden absolute z-10 mt-1 w-64 bg-white rounded-lg shadow-lg border border-gray-200 p-4">
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
                  <%= select_tag :state, options_for_select([['All States', '']] + @states.map { |s| [s, s] }, params[:state]),
                      class: "w-full rounded border-gray-300 text-sm", id: "state_filter", onchange: "applyFilters()" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Party</label>
                  <%= select_tag :party_id, options_for_select([['All Parties', '']] + @parties.map { |p| [p.name, p.id] }, params[:party_id]),
                      class: "w-full rounded border-gray-300 text-sm", id: "party_filter", onchange: "applyFilters()" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Office Dropdown -->
          <div class="relative inline-block">
            <button type="button" onclick="toggleAssignmentDropdown('office')" class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center gap-2">
              Office
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div id="office-assignment-dropdown" class="hidden absolute z-10 mt-1 w-56 bg-white rounded-lg shadow-lg border border-gray-200 p-4">
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Body</label>
                  <%= select_tag :body_id, options_for_select([['All Bodies', '']] + @bodies.map { |b| [b.name, b.id] }, params[:body_id]),
                      class: "w-full rounded border-gray-300 text-sm", id: "body_filter", onchange: "applyFilters()" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Level</label>
                  <%= select_tag :level, options_for_select([['All Levels', '']] + @levels.map { |l| [l.titleize, l] }, params[:level]),
                      class: "w-full rounded border-gray-300 text-sm", id: "level_filter", onchange: "applyFilters()" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                  <%= select_tag :role_filter, options_for_select([['All', ''], ['Current Officeholders', 'officeholders'], ['Candidates', 'candidates']], params[:role_filter]),
                      class: "w-full rounded border-gray-300 text-sm", id: "role_filter", onchange: "applyFilters()" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Election Dropdown -->
          <div class="relative inline-block">
            <button type="button" onclick="toggleAssignmentDropdown('election')" class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center gap-2">
              Election
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div id="election-assignment-dropdown" class="hidden absolute z-10 mt-1 w-64 bg-white rounded-lg shadow-lg border border-gray-200 p-4">
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
                  <%= select_tag :year, options_for_select([['All Years', '']] + @years.map { |y| [y, y] }, params[:year]),
                      class: "w-full rounded border-gray-300 text-sm", id: "year_filter", onchange: "handleYearChange()" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Ballot</label>
                  <%= select_tag :ballot_id, options_for_select([['All Ballots', '']] + @ballots.map { |b| [b.full_name, b.id] }, params[:ballot_id]),
                      class: "w-full rounded border-gray-300 text-sm", id: "ballot_filter", onchange: "handleBallotChange()" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Contest</label>
                  <%= select_tag :contest_id, options_for_select([['All Contests', '']] + @contests.map { |c| [c.full_name, c.id] }, params[:contest_id]),
                      class: "w-full rounded border-gray-300 text-sm", id: "contest_filter", onchange: "applyFilters()" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Assignment Status Dropdown -->
          <div class="relative inline-block">
            <button type="button" onclick="toggleAssignmentDropdown('assignment_status')" class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center gap-2">
              Assignments
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div id="assignment_status-assignment-dropdown" class="hidden absolute z-10 mt-1 w-56 bg-white rounded-lg shadow-lg border border-gray-200 p-4">
              <label class="block text-sm font-medium text-gray-700 mb-1">Assignment Status</label>
              <%= select_tag :assignment_filter, options_for_select([
                    ['All People', ''],
                    ['Unassigned (no tasks)', 'unassigned'],
                    ['No Data Collection', 'no_collection'],
                    ['No Data Validation', 'no_validation']
                  ], params[:assignment_filter]),
                  class: "w-full rounded border-gray-300 text-sm", id: "assignment_filter", onchange: "applyFilters()" %>
            </div>
          </div>
        </div>

      </div>

      <%= turbo_frame_tag "people_list", data: { turbo_action: "advance" } do %>
        <!-- Active Filters Status Line (inside turbo frame so it updates) -->
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <% active_filters = [] %>
          <% active_filters << "Name: \"#{params[:q]}\"" if params[:q].present? %>
          <% active_filters << "State: #{params[:state]}" if params[:state].present? %>
          <% active_filters << "Party: #{@parties.find { |p| p.id.to_s == params[:party_id].to_s }&.name}" if params[:party_id].present? %>
          <% active_filters << "Body: #{@bodies.find { |b| b.id.to_s == params[:body_id].to_s }&.name}" if params[:body_id].present? %>
          <% active_filters << "Level: #{params[:level].titleize}" if params[:level].present? %>
          <% active_filters << "Role: #{params[:role_filter].humanize}" if params[:role_filter].present? %>
          <% active_filters << "Year: #{params[:year]}" if params[:year].present? %>
          <% active_filters << "Ballot: #{@ballots.find { |b| b.id.to_s == params[:ballot_id].to_s }&.full_name}" if params[:ballot_id].present? %>
          <% active_filters << "Contest: #{@contests.find { |c| c.id.to_s == params[:contest_id].to_s }&.full_name}" if params[:contest_id].present? %>
          <% active_filters << "Assignment: #{params[:assignment_filter].humanize}" if params[:assignment_filter].present? %>

          <% if active_filters.any? %>
            <div class="bg-blue-50 border-l-4 border-blue-500 p-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
                <div class="flex-1">
                  <div class="text-sm font-semibold text-blue-900 mb-1">Active Filters:</div>
                  <div class="text-sm text-blue-800"><%= active_filters.join(" ‚Ä¢ ") %></div>
                </div>
              </div>
            </div>
          <% else %>
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-3 text-center">
              <span class="text-sm text-gray-500">No filters applied - showing all people</span>
            </div>
          <% end %>
        </div>
        <!-- Select All / Count -->
        <div class="px-6 py-3 border-b border-gray-200 bg-white">
          <div class="flex flex-col gap-2">
            <div class="text-sm font-medium text-gray-700">
              <span id="selectedCount">0</span> selected ¬∑ <%= @people.total_count %> total
            </div>
            <label class="flex items-center gap-2 text-sm">
              <input type="checkbox" id="selectAll" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
              <span class="text-gray-700">Select all on this page</span>
            </label>
          </div>
        </div>

        <!-- People List -->
        <div class="divide-y divide-gray-200 max-h-[500px] overflow-y-auto">
          <% @people.each do |person| %>
            <% existing_assignments = person.assignments.select { |a| %w[pending in_progress].include?(a.status) } %>
            <%
              # Gather person data
              current_oh = person.officeholders.detect { |oh| oh.end_date.nil? }
              candidate_2026 = person.candidates.joins(:contest).where('contests.date >= ?', Date.new(2026, 1, 1)).first
              populated_accounts = person.social_media_accounts.where.not(url: [nil, '']).count
              total_accounts = person.social_media_accounts.count
              has_website = person.website_campaign.present? || person.website_official.present?
            %>
            <label class="flex items-center gap-4 px-6 py-3 hover:bg-gray-50 cursor-pointer transition-colors">
              <input type="checkbox" name="person_ids[]" value="<%= person.id %>"
                     class="person-checkbox rounded border-gray-300 text-blue-600 focus:ring-blue-500">

              <!-- Photo or Initials -->
              <div class="w-10 h-10 rounded-full flex-shrink-0 flex items-center justify-center text-sm font-semibold
                          <%= person.primary_party&.abbreviation == 'D' ? 'bg-blue-100 text-blue-700' :
                              person.primary_party&.abbreviation == 'R' ? 'bg-red-100 text-red-700' :
                              'bg-gray-200 text-gray-600' %>">
                <% if person.photo_url.present? %>
                  <%= image_tag person.photo_url, class: "w-10 h-10 rounded-full object-cover", alt: person.full_name %>
                <% else %>
                  <%= person.first_name[0] %><%= person.last_name[0] %>
                <% end %>
              </div>

              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <span class="font-medium text-gray-900"><%= person.full_name %></span>
                  <% if person.primary_party %>
                    <span class="px-1.5 py-0.5 text-xs rounded <%= person.primary_party.abbreviation == 'D' ? 'bg-blue-100 text-blue-700' : person.primary_party.abbreviation == 'R' ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-600' %>"><%= person.primary_party.abbreviation %></span>
                  <% end %>
                  <% if has_website %>
                    <span class="text-xs text-green-600" title="Has website">üåê</span>
                  <% end %>
                </div>
                <div class="text-xs text-gray-500 space-y-0.5">
                  <div>
                    <%= person.state_of_residence || "Unknown state" %>
                    <% if current_oh&.office %>
                      ¬∑ Current: <%= current_oh.office.title %><%= " (#{current_oh.office.seat})" if current_oh.office.seat.present? %>
                    <% end %>
                  </div>
                  <% if candidate_2026 %>
                    <div class="text-purple-600">
                      2026 <%= candidate_2026.contest.contest_type.titleize %>: <%= candidate_2026.contest.office.title %><%= " (#{candidate_2026.contest.office.seat})" if candidate_2026.contest.office.seat.present? %>
                      <%= " - #{candidate_2026.party_at_time}" if candidate_2026.party_at_time %>
                    </div>
                  <% end %>
                  <div>
                    Accounts: <%= populated_accounts %>/<%= total_accounts %> populated
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-2 shrink-0">
                <% existing_assignments.each do |a| %>
                  <span class="px-2 py-0.5 text-xs rounded-full
                    <%= a.task_type == 'data_collection' ? 'bg-blue-100 text-blue-700' : 'bg-purple-100 text-purple-700' %>">
                    <%= a.task_type == 'data_collection' ? 'DC' : 'DV' %>: <%= a.user.name.presence || a.user.email.split('@').first %>
                  </span>
                <% end %>
                <% if existing_assignments.empty? %>
                  <span class="text-xs text-gray-400">No assignments</span>
                <% end %>
              </div>
            </label>
          <% end %>
          <% if @people.empty? %>
            <div class="px-6 py-8 text-center text-gray-500">
              No people match the current filters.
            </div>
          <% end %>
        </div>

        <% if @people.total_pages > 1 %>
          <div class="border-t border-gray-200">
            <%= paginate @people %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Submit -->
    <div class="flex justify-between items-center">
      <div class="text-sm text-gray-500" id="submitSummary"></div>
      <div class="flex gap-3">
        <%= link_to "Cancel", admin_assignments_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
        <button type="submit" id="submitBtn"
                class="px-6 py-2.5 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed shadow-sm"
                disabled>
          Create Assignments
        </button>
      </div>
    </div>

  <% end %>
</div>

<script>
  // Initialize after DOM and Turbo Frame loads
  function initializeCheckboxes() {
    const selectAll = document.getElementById('selectAll');
    if (selectAll) {
      selectAll.replaceWith(selectAll.cloneNode(true)); // Remove old listeners
      const newSelectAll = document.getElementById('selectAll');
      newSelectAll.addEventListener('change', function() {
        document.querySelectorAll('.person-checkbox').forEach(cb => cb.checked = this.checked);
        updateCount();
      });
    }

    // Individual checkbox change
    document.querySelectorAll('.person-checkbox').forEach(cb => {
      cb.addEventListener('change', updateCount);
    });

    updateCount();
  }

  // Run on initial load and after turbo frame updates
  document.addEventListener('DOMContentLoaded', initializeCheckboxes);
  document.addEventListener('turbo:frame-load', initializeCheckboxes);

  function updateCount() {
    const checked = document.querySelectorAll('.person-checkbox:checked').length;
    const countEl = document.getElementById('selectedCount');
    if (countEl) countEl.textContent = checked;

    const btn = document.getElementById('submitBtn');
    const researcher = document.querySelector('input[name="user_id"]:checked');
    const taskType = document.querySelector('input[name="task_type"]:checked');

    if (btn) btn.disabled = !(checked > 0 && researcher);

    const summary = document.getElementById('submitSummary');
    if (summary) {
      if (checked > 0 && researcher) {
        const name = researcher.closest('label').querySelector('.font-medium').textContent.trim();
        const type = taskType ? (taskType.value === 'data_collection' ? 'Data Collection' : 'Data Validation') : '';
        summary.textContent = `Assign ${checked} ${checked === 1 ? 'person' : 'people'} to ${name} for ${type}`;
      } else {
        summary.textContent = '';
      }
    }
  }

  // Initialize task type and researcher radios
  function initializeRadios() {
    // Task type radio visual highlighting
    document.querySelectorAll('input[name="task_type"]').forEach(radio => {
      radio.addEventListener('change', function() {
        document.querySelectorAll('.task-type-option').forEach(opt => {
          opt.classList.remove('border-blue-500', 'bg-blue-50', 'border-purple-500', 'bg-purple-50');
          opt.classList.add('border-gray-200');
        });
        const label = this.closest('label');
        label.classList.remove('border-gray-200');
        if (this.value === 'data_collection') {
          label.classList.add('border-blue-500', 'bg-blue-50');
        } else {
          label.classList.add('border-purple-500', 'bg-purple-50');
        }
        updateCount();
      });
    });

    // Researcher radio change
    document.querySelectorAll('input[name="user_id"]').forEach(radio => {
      radio.addEventListener('change', updateCount);
    });

    // Initialize count
    updateCount();
  }

  document.addEventListener('DOMContentLoaded', initializeRadios);

  // Helper function to get all filter values
  function getFilterParams() {
    const params = new URLSearchParams();
    const userId = document.querySelector('input[name="user_id"]:checked')?.value;
    const taskType = document.querySelector('input[name="task_type"]:checked')?.value;

    if (userId) params.set('user_id', userId);
    if (taskType) params.set('task_type', taskType);

    const filters = {
      q: 'q_filter',
      state: 'state_filter',
      party_id: 'party_filter',
      body_id: 'body_filter',
      level: 'level_filter',
      role_filter: 'role_filter',
      year: 'year_filter',
      ballot_id: 'ballot_filter',
      contest_id: 'contest_filter',
      assignment_filter: 'assignment_filter'
    };

    for (const [param, elementId] of Object.entries(filters)) {
      const element = document.getElementById(elementId);
      if (element && element.value) {
        params.set(param, element.value);
      }
    }

    return params;
  }

  // Instant filter function
  function applyFilters() {
    const params = getFilterParams();
    const frame = document.querySelector('turbo-frame[id="people_list"]');
    console.log('Applying filters:', params.toString());
    console.log('Frame found:', !!frame);
    if (frame) {
      const url = `/admin/assignments/new?${params.toString()}`;
      console.log('Loading URL:', url);
      frame.src = url;
    }
  }

  // Handle year changes - update ballot and contest dropdowns
  function handleYearChange() {
    const params = getFilterParams();

    // Fetch updated ballots
    fetch(`/admin/assignments/new?${params.toString()}`, {
      headers: { 'Accept': 'application/json' }
    })
    .then(response => response.json())
    .then(data => {
      updateBallotOptions(data.ballots);
      updateContestOptions([]);
      applyFilters();
    })
    .catch(error => {
      console.error('Error fetching ballots:', error);
      applyFilters();
    });
  }

  // Handle ballot changes - update contest dropdown
  function handleBallotChange() {
    const params = getFilterParams();

    // Fetch updated contests
    fetch(`/admin/assignments/new?${params.toString()}`, {
      headers: { 'Accept': 'application/json' }
    })
    .then(response => response.json())
    .then(data => {
      updateContestOptions(data.contests);
      applyFilters();
    })
    .catch(error => {
      console.error('Error fetching contests:', error);
      applyFilters();
    });
  }

  function updateBallotOptions(ballots) {
    const select = document.getElementById('ballot_filter');
    select.innerHTML = '<option value="">All Ballots</option>';
    ballots.forEach(ballot => {
      const option = document.createElement('option');
      option.value = ballot.id;
      option.textContent = ballot.full_name;
      select.appendChild(option);
    });
  }

  function updateContestOptions(contests) {
    const select = document.getElementById('contest_filter');
    select.innerHTML = '<option value="">All Contests</option>';
    contests.forEach(contest => {
      const option = document.createElement('option');
      option.value = contest.id;
      option.textContent = contest.full_name;
      select.appendChild(option);
    });
  }

  // Initialize filter event listeners
  function initializeFilters() {
    // Attach filter event listeners for simple filters
    ['state_filter', 'party_filter', 'body_filter', 'level_filter', 'role_filter', 'assignment_filter'].forEach(id => {
      const element = document.getElementById(id);
      if (element) {
        element.addEventListener('change', applyFilters);
      }
    });

    // Year and ballot need special handling
    const yearFilter = document.getElementById('year_filter');
    if (yearFilter) {
      yearFilter.addEventListener('change', handleYearChange);
    }

    const ballotFilter = document.getElementById('ballot_filter');
    if (ballotFilter) {
      ballotFilter.addEventListener('change', handleBallotChange);
    }

    const contestFilter = document.getElementById('contest_filter');
    if (contestFilter) {
      contestFilter.addEventListener('change', applyFilters);
    }

    // Search triggers on Enter key
    const searchInput = document.getElementById('q_filter');
    if (searchInput) {
      searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter') {
          e.preventDefault();
          applyFilters();
        }
      });
    }
  }

  // Run filter initialization on page load
  document.addEventListener('DOMContentLoaded', initializeFilters);

  // Toggle dropdown for assignment filters
  function toggleAssignmentDropdown(id) {
    const dropdown = document.getElementById(id + '-assignment-dropdown');
    const allDropdowns = document.querySelectorAll('[id$="-assignment-dropdown"]');

    // Close all other dropdowns
    allDropdowns.forEach(d => {
      if (d.id !== id + '-assignment-dropdown') {
        d.classList.add('hidden');
      }
    });

    // Toggle this dropdown
    dropdown.classList.toggle('hidden');
  }

  // Close dropdowns when clicking outside
  document.addEventListener('click', function(event) {
    if (!event.target.closest('button[onclick^="toggleAssignmentDropdown"]') &&
        !event.target.closest('[id$="-assignment-dropdown"]')) {
      document.querySelectorAll('[id$="-assignment-dropdown"]').forEach(d => d.classList.add('hidden'));
    }
  });
</script>
