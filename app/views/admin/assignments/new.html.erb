<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">New Assignment</h1>

  <%= form_with model: [:admin, @assignment], class: "bg-white rounded-lg shadow p-6" do |f| %>
    <% if @assignment.errors.any? %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
        <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
        <ul class="list-disc list-inside text-red-700 text-sm mt-2">
          <% @assignment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-1">Person</label>
      <% if @assignment.person_id %>
        <input type="hidden" name="assignment[person_id]" value="<%= @assignment.person_id %>">
        <div class="px-3 py-2 bg-gray-100 rounded"><%= Person.find(@assignment.person_id).full_name %></div>
      <% else %>
        <%= f.collection_select :person_id, @people, :id, :full_name, { prompt: "Select a person..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
      <% end %>
    </div>

    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-1">Researcher</label>
      <%= f.collection_select :user_id, @researchers, :id, :name, { prompt: "Select a researcher..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-1">Task Type</label>
      <%= f.select :task_type, Assignment::TASK_TYPES.map { |t| [t.humanize, t] }, { prompt: "Select task type..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-6">
      <label class="block text-sm font-medium text-gray-700 mb-1">Notes (optional)</label>
      <%= f.text_area :notes, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel", admin_assignments_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
      <%= f.submit "Create Assignment", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
