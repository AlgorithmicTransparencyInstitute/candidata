<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Assignments", admin_assignments_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Assignment Details</h1>
      </div>
      <div class="flex items-center gap-2">
        <%= assignment_status_badge(@assignment.status) %>
        <% unless @assignment.completed? %>
          <%= button_to "Mark Complete", complete_admin_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
        <% end %>
      </div>
    </div>

    <div class="p-6 grid grid-cols-2 gap-6">
      <div>
        <div class="text-sm text-gray-500">Person</div>
        <div class="font-medium">
          <%= link_to @person.full_name, admin_person_path(@person), class: "text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
      <div>
        <div class="text-sm text-gray-500">Researcher</div>
        <div class="font-medium"><%= @assignment.user.name %></div>
      </div>
      <div>
        <div class="text-sm text-gray-500">Task Type</div>
        <div class="font-medium"><%= @assignment.task_type.humanize %></div>
      </div>
      <div>
        <div class="text-sm text-gray-500">Assigned By</div>
        <div class="font-medium"><%= @assignment.assigned_by.name %></div>
      </div>
      <div>
        <div class="text-sm text-gray-500">Created</div>
        <div class="font-medium"><%= @assignment.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
      </div>
      <% if @assignment.completed_at %>
        <div>
          <div class="text-sm text-gray-500">Completed</div>
          <div class="font-medium"><%= @assignment.completed_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
      <% end %>
      <% if @assignment.notes.present? %>
        <div class="col-span-2">
          <div class="text-sm text-gray-500">Notes</div>
          <div class="font-medium"><%= @assignment.notes %></div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Accounts -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Social Media Accounts</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% @accounts.each do |account| %>
        <div class="px-6 py-4 flex justify-between items-center">
          <div class="flex items-center gap-3">
            <span class="text-lg"><%= platform_icon(account.platform) %></span>
            <div>
              <div class="font-medium"><%= account.platform %> (<%= account.channel_type %>)</div>
              <% if account.url.present? || account.handle.present? %>
                <div class="text-sm text-gray-600"><%= account.url.presence || "@#{account.handle}" %></div>
              <% end %>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <%= research_status_badge(account.research_status) %>
            <% if account.entered_by %>
              <span class="text-xs text-gray-500">by <%= account.entered_by.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
