<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Assignments</h1>
    <%= link_to "New Assignment", new_admin_assignment_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow mb-6 p-4">
    <%= form_with url: admin_assignments_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <%= select_tag :status, options_for_select([['All', ''], ['Pending', 'pending'], ['In Progress', 'in_progress'], ['Completed', 'completed']], params[:status]), class: "px-3 py-2 border border-gray-300 rounded-md" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Task Type</label>
        <%= select_tag :task_type, options_for_select([['All', ''], ['Research', 'research'], ['Verification', 'verification']], params[:task_type]), class: "px-3 py-2 border border-gray-300 rounded-md" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Researcher</label>
        <%= select_tag :user_id, options_for_select([['All', '']] + @users.map { |u| [u.name, u.id] }, params[:user_id]), class: "px-3 py-2 border border-gray-300 rounded-md" %>
      </div>
      <div>
        <%= submit_tag "Filter", class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 cursor-pointer" %>
        <%= link_to "Clear", admin_assignments_path, class: "px-4 py-2 text-gray-600 hover:text-gray-900" %>
      </div>
    <% end %>
  </div>

  <!-- Assignments Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Person</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Researcher</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Task</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Assigned</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @assignments.each do |assignment| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <%= link_to assignment.person.full_name, admin_person_path(assignment.person), class: "text-blue-600 hover:text-blue-800" %>
            </td>
            <td class="px-6 py-4 text-gray-600">
              <%= assignment.user.name %>
            </td>
            <td class="px-6 py-4">
              <span class="px-2 py-1 text-xs rounded-full <%= assignment.task_type == 'research' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                <%= assignment.task_type.humanize %>
              </span>
            </td>
            <td class="px-6 py-4">
              <%= assignment_status_badge(assignment.status) %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              <%= time_ago_in_words(assignment.created_at) %> ago
              <div class="text-xs">by <%= assignment.assigned_by.name %></div>
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to "View", admin_assignment_path(assignment), class: "text-blue-600 hover:text-blue-800 mr-3" %>
              <% unless assignment.completed? %>
                <%= button_to "Complete", complete_admin_assignment_path(assignment), method: :patch, class: "text-green-600 hover:text-green-800" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <%= paginate @assignments %>
  </div>
</div>
