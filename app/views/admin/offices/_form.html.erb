<%= form_with model: [:admin, office], class: "bg-white rounded-lg shadow p-6" do |f| %>
  <% if office.errors.any? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% office.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
    <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md", required: true %>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Level</label>
      <%= f.select :level, Office::LEVELS.map { |l| [l.titleize, l] }, { include_blank: 'Select level' }, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
      <%= f.select :state, State.order(:name).pluck(:abbreviation, :name).map { |a, n| [n, a] }, { include_blank: 'Select state' }, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">District</label>
      <%= f.collection_select :district_id, District.order(:name).limit(100), :id, :name, { include_blank: 'No district' }, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Seat</label>
      <%= f.text_field :seat, class: "w-full px-3 py-2 border border-gray-300 rounded-md", placeholder: "e.g., District 1" %>
    </div>
  </div>

  <div class="mb-6">
    <label class="block text-sm font-medium text-gray-700 mb-1">Term Length (years)</label>
    <%= f.number_field :term_length, class: "w-full px-3 py-2 border border-gray-300 rounded-md", min: 1 %>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", office.persisted? ? admin_office_path(office) : admin_offices_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
    <%= f.submit office.persisted? ? "Save Changes" : "Create Office", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
