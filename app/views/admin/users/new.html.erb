<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "â† Back to Users", admin_users_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">New User</h1>

  <%= form_with model: [:admin, @user], class: "bg-white rounded-lg shadow p-6" do |f| %>
    <% if @user.errors.any? %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
        <ul class="list-disc list-inside text-red-700 text-sm">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
      <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
      <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md", required: true %>
    </div>

    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
      <%= f.select :role, User::ROLES.map { |r| [r.titleize, r] }, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
      <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md", required: true, autocomplete: "new-password" %>
    </div>

    <div class="mb-6">
      <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md", required: true, autocomplete: "new-password" %>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel", admin_users_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
      <%= f.submit "Create User", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
