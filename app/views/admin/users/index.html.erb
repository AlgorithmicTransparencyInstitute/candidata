<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Users</h1>
    <div class="flex gap-2">
      <%= link_to new_admin_invitation_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" do %>
        <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
        </svg>
        Invite Users
      <% end %>
      <%= link_to "New User", new_admin_user_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow mb-6 p-4">
    <div class="flex gap-2">
      <%= link_to "All", admin_users_path, class: "px-4 py-2 rounded #{params[:role].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      <%= link_to "Admins", admin_users_path(role: 'admin'), class: "px-4 py-2 rounded #{params[:role] == 'admin' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      <%= link_to "Researchers", admin_users_path(role: 'researcher'), class: "px-4 py-2 rounded #{params[:role] == 'researcher' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Assignments</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <%= link_to user.name || user.email, admin_user_path(user), class: "text-blue-600 hover:text-blue-800 font-medium" %>
            </td>
            <td class="px-6 py-4 text-gray-600"><%= user.email %></td>
            <td class="px-6 py-4">
              <span class="px-2 py-1 text-xs rounded-full <%= user.admin? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                <%= user.role.titleize %>
              </span>
            </td>
            <td class="px-6 py-4">
              <% if user.invitation_token.present? && !user.invitation_accepted? %>
                <span class="px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800">Invited</span>
              <% else %>
                <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Active</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-gray-600">
              <%= user.assignments.active.count %> active
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to "Edit", edit_admin_user_path(user), class: "text-blue-600 hover:text-blue-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <%= paginate @users %>
  </div>
</div>
