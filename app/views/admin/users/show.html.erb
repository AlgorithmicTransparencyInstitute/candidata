<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "â† Back to Users", admin_users_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @user.name || @user.email %></h1>
        <p class="text-gray-600"><%= @user.email %></p>
      </div>
      <div class="flex items-center gap-2">
        <span class="px-3 py-1 text-sm rounded-full <%= @user.admin? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
          <%= @user.role.titleize %>
        </span>
        <% if @user.invitation_token.present? && !@user.invitation_accepted? %>
          <span class="px-3 py-1 text-sm rounded-full bg-yellow-100 text-yellow-800">Invited</span>
        <% elsif @user.invitation_accepted? %>
          <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800">Active</span>
        <% end %>
        <%= link_to "Edit", edit_admin_user_path(@user), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
      </div>
    </div>

    <div class="p-6 grid grid-cols-2 gap-6">
      <div>
        <div class="text-sm text-gray-500">Created</div>
        <div class="font-medium"><%= @user.created_at.strftime("%B %d, %Y") %></div>
      </div>
      <div>
        <div class="text-sm text-gray-500">Last Sign In</div>
        <div class="font-medium"><%= @user.last_sign_in_at&.strftime("%B %d, %Y at %I:%M %p") || "Never" %></div>
      </div>
      <div>
        <div class="text-sm text-gray-500">Active Assignments</div>
        <div class="font-medium"><%= @user.assignments.active.count %></div>
      </div>
      <div>
        <div class="text-sm text-gray-500">Completed Assignments</div>
        <div class="font-medium"><%= @user.assignments.completed.count %></div>
      </div>
    </div>
  </div>

  <!-- Invitation Link (for pending invitations) -->
  <% if @user.invitation_token.present? && !@user.invitation_accepted? %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-blue-200">
        <h2 class="text-lg font-semibold text-blue-900">Invitation Link</h2>
      </div>
      <div class="px-6 py-4">
        <p class="text-sm text-blue-700 mb-3">
          This user has a pending invitation. Generate a fresh invitation link to share manually:
        </p>
        <div class="flex gap-2">
          <input type="text" readonly id="invitationLinkInput"
                 class="flex-1 px-3 py-2 border border-blue-300 rounded bg-white text-sm font-mono"
                 value="Click 'Generate Link' to create a shareable invitation URL">
          <button type="button" onclick="generateInvitationLink()"
                  class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 font-medium">
            Generate Link
          </button>
          <button type="button" onclick="copyInvitationLink()" id="copyButton" disabled
                  class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 font-medium disabled:opacity-50 disabled:cursor-not-allowed">
            Copy
          </button>
        </div>
        <p class="text-xs text-blue-600 mt-2">
          Note: Generating a new link will invalidate any previous invitation links for this user.
        </p>
      </div>
    </div>

    <script>
      async function generateInvitationLink() {
        const response = await fetch('<%= generate_invitation_link_admin_user_path(@user) %>', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
            'Accept': 'application/json'
          }
        });

        const data = await response.json();
        if (data.invitation_url) {
          document.getElementById('invitationLinkInput').value = data.invitation_url;
          document.getElementById('copyButton').disabled = false;
        } else {
          alert('Error generating invitation link');
        }
      }

      function copyInvitationLink() {
        const input = document.getElementById('invitationLinkInput');
        input.select();
        document.execCommand('copy');

        const button = document.getElementById('copyButton');
        const originalText = button.textContent;
        button.textContent = 'Copied!';
        button.classList.add('bg-green-700');

        setTimeout(() => {
          button.textContent = originalText;
          button.classList.remove('bg-green-700');
        }, 2000);
      }
    </script>
  <% end %>

  <!-- Admin Actions -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Admin Actions</h2>
    </div>
    <div class="px-6 py-4 flex flex-wrap gap-3">
      <% if @user.invitation_token.present? && !@user.invitation_accepted? %>
        <button type="button" onclick="openInvitationModal()" class="inline-flex items-center px-4 py-2 text-sm font-medium text-indigo-700 bg-indigo-50 border border-indigo-200 rounded-lg hover:bg-indigo-100 cursor-pointer">
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
          Resend Invitation
        </button>
      <% end %>
      <%= button_to send_reset_password_admin_user_path(@user), method: :post, data: { confirm: "Send a password reset email to #{@user.email}?" }, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-amber-700 bg-amber-50 border border-amber-200 rounded-lg hover:bg-amber-100 cursor-pointer" do %>
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
        </svg>
        Send Password Reset
      <% end %>
      <% if @user.researcher? && @user.assignments.where(status: ['pending', 'in_progress']).any? %>
        <%= button_to send_assignment_reminder_admin_user_path(@user), method: :post, data: { confirm: "Send assignment reminder email to #{@user.email}?" }, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-teal-700 bg-teal-50 border border-teal-200 rounded-lg hover:bg-teal-100 cursor-pointer" do %>
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
          </svg>
          Send Assignment Reminder
        <% end %>
      <% end %>
      <% if @user.researcher? %>
        <%= button_to impersonate_admin_user_path(@user), method: :post, data: { confirm: "View the site as #{@user.name || @user.email}?" }, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-purple-700 bg-purple-50 border border-purple-200 rounded-lg hover:bg-purple-100 cursor-pointer" do %>
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>
          Become User
        <% end %>
      <% end %>
      <%= button_to admin_user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete #{@user.name || @user.email}? This action cannot be undone." }, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-red-700 bg-red-50 border border-red-200 rounded-lg hover:bg-red-100 cursor-pointer" do %>
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
        </svg>
        Delete User
      <% end %>
    </div>
  </div>

  <!-- Login History -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Login History</h2>
    </div>
    <div class="p-6">
      <% recent_visits = @user.visits.order(started_at: :desc).limit(10) %>
      <% if recent_visits.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Date & Time</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Browser</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">OS</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Device</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">IP Address</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% recent_visits.each do |visit| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-3 py-3 text-sm text-gray-900">
                    <%= visit.started_at.strftime("%b %d, %Y %I:%M %p") %>
                    <span class="text-gray-500 text-xs block"><%= time_ago_in_words(visit.started_at) %> ago</span>
                  </td>
                  <td class="px-3 py-3 text-sm text-gray-700">
                    <%= visit.browser %>
                  </td>
                  <td class="px-3 py-3 text-sm text-gray-700">
                    <%= visit.os %>
                  </td>
                  <td class="px-3 py-3 text-sm text-gray-700">
                    <%= visit.device_type.to_s.titleize %>
                  </td>
                  <td class="px-3 py-3 text-sm text-gray-600 font-mono">
                    <%= visit.ip %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <% if @user.visits.count > 10 %>
          <div class="mt-4 text-sm text-gray-600">
            Showing 10 of <%= @user.visits.count %> total visits
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8 text-gray-500">No login history yet</div>
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Recent Assignments</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @assignments.any? %>
        <% @assignments.each do |assignment| %>
          <div class="px-6 py-4 flex justify-between items-center gap-4">
            <div class="flex-1 min-w-0">
              <%= render 'admin/assignments/person_card', person: assignment.person %>
              <div class="mt-2 flex items-center gap-2">
                <span class="px-2 py-1 text-xs rounded-full <%= assignment.task_type == 'data_collection' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                  <%= assignment.task_type.humanize %>
                </span>
                <%= link_to "View Assignment", admin_assignment_path(assignment), class: "text-xs text-blue-600 hover:text-blue-800" %>
              </div>
            </div>
            <div class="flex items-center gap-3 flex-shrink-0">
              <%= assignment_status_badge(assignment.status) %>
              <%= button_to "Delete", admin_assignment_path(assignment), method: :delete, class: "text-red-600 hover:text-red-800 text-sm", data: { confirm: "Are you sure you want to delete this assignment?" } %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">No assignments yet</div>
      <% end %>
    </div>
  </div>
</div>

<!-- Resend Invitation Modal -->
<% if @user.invitation_token.present? && !@user.invitation_accepted? %>
  <div id="invitationModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-lg bg-white">
      <div class="mt-3">
        <div class="flex items-start justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900">Resend Invitation</h3>
          <button type="button" onclick="closeInvitationModal()" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <%= form_with url: resend_invitation_admin_user_path(@user), method: :post, id: "resendInvitationForm" do |f| %>
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Email Subject Line
            </label>
            <%= f.text_field :subject,
                value: "Your CandiData Account Access",
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
                placeholder: "Enter email subject line" %>
            <p class="mt-1 text-xs text-gray-500">Customize the subject line for better deliverability</p>
          </div>

          <div class="bg-gray-50 rounded-lg p-3 mb-4">
            <div class="text-xs text-gray-600">
              <strong>To:</strong> <%= @user.email %><br>
              <% if @user.name.present? %>
                <strong>Name:</strong> <%= @user.name %><br>
              <% end %>
              <strong>Role:</strong> <%= @user.role.titleize %>
            </div>
          </div>

          <div class="flex gap-2 justify-end">
            <button type="button" onclick="closeInvitationModal()" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">
              Cancel
            </button>
            <%= f.submit "Send Invitation", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    function openInvitationModal() {
      document.getElementById('invitationModal').classList.remove('hidden');
    }

    function closeInvitationModal() {
      document.getElementById('invitationModal').classList.add('hidden');
    }

    // Close modal when clicking outside
    document.getElementById('invitationModal')?.addEventListener('click', function(e) {
      if (e.target === this) {
        closeInvitationModal();
      }
    });

    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeInvitationModal();
      }
    });
  </script>
<% end %>
