<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Accounts", admin_social_media_accounts_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-900"><%= @account.platform %> Account</h1>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_admin_social_media_account_path(@account), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
        <%= button_to "Delete", admin_social_media_account_path(@account), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <!-- Person Information -->
      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-900 mb-3">Person</h2>
        <div class="flex items-center gap-4">
          <% if @person.photo_url.present? %>
            <%= image_tag @person.photo_url, class: "w-16 h-16 rounded-full object-cover", alt: @person.full_name %>
          <% else %>
            <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 font-semibold text-xl">
              <%= @person.first_name[0] %><%= @person.last_name[0] %>
            </div>
          <% end %>
          <div>
            <%= link_to @person.full_name, admin_person_path(@person), class: "text-xl font-semibold text-blue-600 hover:text-blue-800" %>
            <div class="text-sm text-gray-600">
              <%= @person.primary_party&.name %> · <%= @person.state_of_residence %>
            </div>
            <% if @person.current_offices.any? %>
              <div class="text-sm text-gray-600">
                Current: <%= @person.current_offices.first.title %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Account Details -->
      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <div class="text-sm text-gray-500">Platform</div>
          <div class="font-medium flex items-center gap-2">
            <%= platform_icon(@account.platform, size: 20) %>
            <%= @account.platform %>
          </div>
        </div>
        <div>
          <div class="text-sm text-gray-500">Channel Type</div>
          <div class="font-medium"><%= @account.channel_type %></div>
        </div>
        <div>
          <div class="text-sm text-gray-500">URL</div>
          <div class="font-medium">
            <% if @account.url.present? %>
              <%= link_to @account.url, @account.url, target: "_blank", class: "text-blue-600 hover:text-blue-800 break-all" %>
            <% else %>
              <span class="text-gray-400">—</span>
            <% end %>
          </div>
        </div>
        <div>
          <div class="text-sm text-gray-500">Handle</div>
          <div class="font-medium">
            <% if @account.handle.present? %>
              @<%= @account.handle %>
            <% else %>
              <span class="text-gray-400">—</span>
            <% end %>
          </div>
        </div>
        <div>
          <div class="text-sm text-gray-500">Research Status</div>
          <div class="font-medium"><%= research_status_badge(@account.research_status) %></div>
        </div>
        <div>
          <div class="text-sm text-gray-500">Account Status</div>
          <div class="font-medium">
            <%= @account.account_inactive ? '<span class="text-red-600">Inactive</span>'.html_safe : '<span class="text-green-600">Active</span>'.html_safe %>
          </div>
        </div>
      </div>

      <!-- Research Information -->
      <% if @account.entered_by || @account.verified_by %>
        <div class="border-t pt-4">
          <h2 class="text-lg font-semibold text-gray-900 mb-3">Research Information</h2>
          <div class="grid md:grid-cols-2 gap-4">
            <% if @account.entered_by %>
              <div>
                <div class="text-sm text-gray-500">Entered By</div>
                <div class="font-medium"><%= @account.entered_by.name.presence || @account.entered_by.email %></div>
                <div class="text-xs text-gray-500"><%= @account.entered_at&.strftime("%B %d, %Y at %I:%M %p") %></div>
              </div>
            <% end %>
            <% if @account.verified_by %>
              <div>
                <div class="text-sm text-gray-500">Verified By</div>
                <div class="font-medium"><%= @account.verified_by.name.presence || @account.verified_by.email %></div>
                <div class="text-xs text-gray-500"><%= @account.verified_at&.strftime("%B %d, %Y at %I:%M %p") %></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Notes -->
      <% if @account.research_notes.present? || @account.verification_notes.present? %>
        <div class="border-t pt-4">
          <h2 class="text-lg font-semibold text-gray-900 mb-3">Notes</h2>
          <% if @account.research_notes.present? %>
            <div class="mb-3">
              <div class="text-sm font-medium text-gray-700">Research Notes:</div>
              <div class="mt-1 p-3 bg-gray-50 rounded border border-gray-200 text-sm"><%= @account.research_notes %></div>
            </div>
          <% end %>
          <% if @account.verification_notes.present? %>
            <div>
              <div class="text-sm font-medium text-gray-700">Verification Notes:</div>
              <div class="mt-1 p-3 bg-gray-50 rounded border border-gray-200 text-sm"><%= @account.verification_notes %></div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Metadata -->
      <div class="border-t pt-4 text-xs text-gray-500">
        <div>Created: <%= @account.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        <div>Last Updated: <%= @account.updated_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        <% if @account.pre_populated %>
          <div class="mt-1"><span class="px-2 py-1 bg-gray-100 text-gray-600 rounded text-xs">Pre-populated</span></div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Version History -->
  <% if @account.versions.any? %>
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Version History</h2>
        <p class="text-sm text-gray-500"><%= @account.versions.count %> version<%= @account.versions.count == 1 ? '' : 's' %></p>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @account.versions.reverse_each.with_index do |version, index| %>
            <div class="border-l-4 <%= index == 0 ? 'border-blue-500' : 'border-gray-300' %> pl-4 py-2">
              <div class="flex items-start justify-between mb-2">
                <div>
                  <span class="font-semibold text-gray-900">
                    <%= version.event.titleize %>
                    <% if index == 0 %>
                      <span class="ml-2 px-2 py-0.5 bg-blue-100 text-blue-700 text-xs rounded-full">Current</span>
                    <% end %>
                  </span>
                  <div class="text-xs text-gray-500 mt-1">
                    <%= version.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                    <% if version.whodunnit.present? %>
                      <% user = User.find_by(id: version.whodunnit) %>
                      · by <%= user ? (user.name.presence || user.email) : "User ##{version.whodunnit}" %>
                    <% end %>
                  </div>
                </div>
                <span class="text-xs text-gray-400 font-mono">v<%= @account.versions.count - index %></span>
              </div>

              <% if version.event == 'create' %>
                <div class="text-xs text-gray-400 mt-2 italic">Record created</div>
              <% elsif version.event == 'destroy' %>
                <div class="text-sm text-red-600 mt-2">Record was deleted</div>
              <% end %>

              <!-- Show change diff if available (new versions with object_changes) -->
              <% if version.respond_to?(:object_changes) && version.object_changes.present? %>
                <% changes = YAML.load(version.object_changes) %>
                <% relevant_changes = changes.slice('url', 'handle', 'research_status', 'channel_type', 'account_inactive', 'verified', 'entered_by_id', 'verified_by_id', 'research_notes', 'verification_notes') %>
                <% if relevant_changes.any? %>
                  <div class="text-sm text-gray-600 mt-2">
                    <div class="font-medium mb-1">Changes:</div>
                    <div class="bg-yellow-50 rounded p-3 text-xs font-mono space-y-1 border border-yellow-200">
                      <% relevant_changes.each do |field, (old_value, new_value)| %>
                        <div class="flex items-start gap-2">
                          <span class="text-gray-500 w-32 shrink-0"><%= field %>:</span>
                          <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2 flex-wrap">
                              <span class="text-red-600 line-through break-all"><%= old_value.nil? ? '(nil)' : old_value.to_s.truncate(100) %></span>
                              <span class="text-gray-400">→</span>
                              <span class="text-green-700 break-all"><%= new_value.nil? ? '(nil)' : new_value.to_s.truncate(100) %></span>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>

              <!-- Show full object state (available for all versions except create) -->
              <% if version.object.present? %>
                <% obj = YAML.load(version.object) %>
                <% relevant_fields = obj.slice('url', 'handle', 'research_status', 'channel_type', 'platform', 'account_inactive', 'verified', 'entered_by_id', 'verified_by_id', 'entered_at', 'verified_at', 'research_notes', 'verification_notes', 'pre_populated') %>
                <div class="text-sm text-gray-600 mt-3">
                  <button type="button" onclick="document.getElementById('object-<%= version.id %>').classList.toggle('hidden')" class="text-blue-600 hover:text-blue-800 text-xs mb-1">
                    ▸ Show full state at this version
                  </button>
                  <div id="object-<%= version.id %>" class="hidden bg-gray-50 rounded p-3 text-xs font-mono space-y-1 border border-gray-200">
                    <% relevant_fields.each do |field, value| %>
                      <div class="flex items-start gap-2">
                        <span class="text-gray-500 w-40 shrink-0"><%= field %>:</span>
                        <span class="text-gray-900 break-all flex-1">
                          <%= value.nil? ? '<span class="text-gray-400">(nil)</span>'.html_safe : value.to_s %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
