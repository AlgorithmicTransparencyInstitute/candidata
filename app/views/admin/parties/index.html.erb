<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Parties</h1>
    <%= link_to "New Party", new_admin_party_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Abbreviation</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ideology</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @parties.each do |party| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 font-medium text-gray-900"><%= party.name %></td>
            <td class="px-6 py-4 text-gray-600"><%= party.abbreviation %></td>
            <td class="px-6 py-4 text-gray-600"><%= party.ideology %></td>
            <td class="px-6 py-4 text-right">
              <%= link_to "Edit", edit_admin_party_path(party), class: "text-blue-600 hover:text-blue-800 mr-3" %>
              <%= button_to "Delete", admin_party_path(party), method: :delete, 
                  data: { turbo_confirm: "Delete #{party.name}?" }, 
                  class: "text-red-600 hover:text-red-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @parties.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500">No parties yet</p>
      </div>
    <% end %>
  </div>
</div>
