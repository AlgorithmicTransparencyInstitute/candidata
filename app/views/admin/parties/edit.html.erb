<div class="min-h-screen bg-gray-50">
  <%= render "shared/navbar" %>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <div class="px-4 sm:px-0">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Party Information</h3>
            <p class="mt-1 text-sm text-gray-600">
              Update the political party information. Changes will affect all associated politicians.
            </p>
          </div>
        </div>

        <div class="mt-5 md:mt-0 md:col-span-2">
          <%= form_with(model: @party, url: admin_party_path(@party), method: :patch, class: "space-y-6") do |form| %>
            <div class="shadow sm:rounded-md sm:overflow-hidden">
              <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                <div class="grid grid-cols-6 gap-6">
                  <div class="col-span-6 sm:col-span-3">
                    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
                    <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
                  </div>

                  <div class="col-span-6 sm:col-span-3">
                    <%= form.label :abbreviation, class: "block text-sm font-medium text-gray-700" %>
                    <%= form.text_field :abbreviation, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true, maxlength: 10 %>
                  </div>

                  <div class="col-span-6">
                    <%= form.label :ideology, class: "block text-sm font-medium text-gray-700" %>
                    <%= form.text_field :ideology, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                </div>
              </div>
              <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <%= link_to "Cancel", admin_parties_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                <%= form.submit "Update Party", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
