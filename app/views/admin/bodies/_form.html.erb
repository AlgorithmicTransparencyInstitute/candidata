<%= form_with(model: [:admin, body], class: "space-y-6") do |f| %>
  <% if body.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(body.errors.count, "error") %> prohibited this body from being saved:
      </h3>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% body.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-6">
    <div class="col-span-2">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :country, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :country, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :state, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :level, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :level, Body::LEVELS, { include_blank: 'Select level' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :branch, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :branch, Body::BRANCHES, { include_blank: 'Select branch' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :chamber_type, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :chamber_type, Body::CHAMBER_TYPES, { include_blank: 'Select chamber type' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :parent_body_id, "Parent Body", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :parent_body_id, Body.order(:name), :id, :name, { include_blank: 'None' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", admin_bodies_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>
