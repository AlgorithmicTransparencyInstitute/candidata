<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to #{@candidate.person.full_name}", admin_person_path(@candidate.person), class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Edit Candidate</h1>
      <p class="text-gray-600">
        <%= @candidate.person.full_name %> -
        <%= @candidate.contest.office.title %>
        (<%= @candidate.contest.ballot.full_name %>)
      </p>
    </div>

    <div class="p-6">
      <%= form_with model: @candidate, url: admin_candidate_path(@candidate), method: :patch, class: "space-y-6" do |f| %>
        <% if @candidate.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded p-4">
            <h3 class="text-red-800 font-medium">Errors:</h3>
            <ul class="list-disc list-inside text-red-700">
              <% @candidate.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Person</label>
          <p class="text-gray-900"><%= @candidate.person.full_name %></p>
        </div>

        <div>
          <%= f.label :contest_id, "Contest", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :contest_id,
                      grouped_options_for_select(
                        @available_contests.group_by { |c| c.ballot.full_name }.map do |ballot_name, contests|
                          [
                            ballot_name,
                            contests.map { |c|
                              district_info = c.office.district ? " (District #{c.office.district.district_number})" : ""
                              ["#{c.office.title}#{district_info}", c.id]
                            }
                          ]
                        end,
                        @candidate.contest_id
                      ),
                      {},
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          <p class="text-sm text-gray-500 mt-1">You can move this candidate to a different contest in the same election/year</p>
        </div>

        <div>
          <%= f.label :outcome, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :outcome,
                      [['Won', 'won'], ['Lost', 'lost'], ['Pending', nil]],
                      { include_blank: false },
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
        </div>

        <div>
          <%= f.label :tally, "Vote Tally", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :tally, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
        </div>

        <div>
          <%= f.label :incumbent, class: "inline-flex items-center" %>
          <%= f.check_box :incumbent, class: "ml-2 rounded border-gray-300" %>
        </div>

        <div>
          <%= f.label :party_at_time, "Party at time of election", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :party_at_time, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
        </div>

        <div class="flex gap-3">
          <%= f.submit "Update Candidate", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
          <%= link_to "Cancel", admin_person_path(@candidate.person), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
