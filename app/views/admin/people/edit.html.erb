<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to #{@person.full_name}", admin_person_path(@person), class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Edit Person</h1>
    </div>

    <div class="p-6">
      <%= form_with model: @person, url: admin_person_path(@person), method: :patch, class: "space-y-6" do |f| %>
        <% if @person.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded p-4">
            <h3 class="text-red-800 font-medium">Errors:</h3>
            <ul class="list-disc list-inside text-red-700">
              <% @person.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md", required: true %>
          </div>

          <div>
            <%= f.label :middle_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :middle_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md", required: true %>
          </div>

          <div>
            <%= f.label :suffix, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :suffix, placeholder: "Jr., III, etc.", class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :gender, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :gender,
                        [['Male', 'M'], ['Female', 'F'], ['Other', 'O']],
                        { include_blank: 'Select gender' },
                        class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>

          <div>
            <%= f.label :race, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :race, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :birth_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :birth_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>

          <div>
            <%= f.label :death_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :death_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
        </div>

        <div>
          <%= f.label :state_of_residence, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :state_of_residence,
                      options_from_collection_for_select(State.order(:name), :abbreviation, :name, @person.state_of_residence),
                      { include_blank: 'Select state' },
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
        </div>

        <div>
          <%= f.label :photo_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :photo_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
        </div>

        <div>
          <%= f.label :website_official, "Official Website", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.url_field :website_official, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
        </div>

        <div>
          <%= f.label :website_campaign, "Campaign Website", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.url_field :website_campaign, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
        </div>

        <div>
          <%= f.label :person_uuid, "UUID", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :person_uuid, class: "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50", readonly: true %>
          <p class="text-sm text-gray-500 mt-1">System-generated identifier</p>
        </div>

        <div class="flex gap-3">
          <%= f.submit "Update Person", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
          <%= link_to "Cancel", admin_person_path(@person), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
