<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">People</h1>
    <div class="flex gap-2">
      <%= link_to "Bulk Assign", bulk_assign_admin_people_path, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
      <%= link_to "New Person", new_admin_person_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>
  </div>

  <!-- Enhanced Filters -->
  <div class="bg-white rounded-lg shadow mb-6 p-4">
    <%= form_with url: admin_people_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Text Search -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Search Name</label>
          <%= text_field_tag :q, params[:q], placeholder: "First or last name...", class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
        </div>

        <!-- State Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
          <%= select_tag :state, options_for_select([["All States", ""]] + @states.map { |s| [s.name, s.abbreviation] }, params[:state]), class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
        </div>

        <!-- Party Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Party</label>
          <%= select_tag :party_id, options_for_select([["All Parties", ""]] + @parties.map { |p| [p.name, p.id] }, params[:party_id]), class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
        </div>

        <!-- Office Level Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Office Level</label>
          <%= select_tag :office_level, options_for_select([
            ["All Levels", ""],
            ["Federal", "federal"],
            ["State", "state"],
            ["Local", "local"]
          ], params[:office_level]), class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
        </div>

        <!-- Research Status Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Research Status</label>
          <%= select_tag :research_status, options_for_select([
            ["All Statuses", ""],
            ["Not Started", "not_started"],
            ["Entered (Needs Verification)", "entered"],
            ["Not Found", "not_found"],
            ["Verified", "verified"],
            ["Rejected", "rejected"],
            ["Revised (Needs Re-verification)", "revised"]
          ], params[:research_status]), class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
        </div>

        <!-- Assignment Status Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Assignment Status</label>
          <%= select_tag :assignment_status, options_for_select([
            ["All Assignments", ""],
            ["Unassigned", "unassigned"],
            ["Assigned (Active)", "assigned"],
            ["Completed", "completed"]
          ], params[:assignment_status]), class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
        </div>

        <!-- Account Status Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Account Status</label>
          <%= select_tag :account_status, options_for_select([
            ["All People", ""],
            ["Has Accounts", "has_accounts"],
            ["No Accounts", "no_accounts"]
          ], params[:account_status]), class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm" %>
        </div>
      </div>

      <div class="flex gap-2 pt-2">
        <%= submit_tag "Apply Filters", class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 cursor-pointer" %>
        <%= link_to "Clear All", admin_people_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
      </div>
    <% end %>
  </div>

  <!-- Enhanced People Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Party</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">State</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Current Office</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Accounts Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Assignment</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @people.each do |person| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <%= link_to person.full_name, admin_person_path(person), class: "text-blue-600 hover:text-blue-800 font-medium" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600">
              <%= person.primary_party&.abbreviation || "—" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600">
              <%= person.state_of_residence || "—" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600">
              <% current_offices = person.current_offices.limit(2) %>
              <% if current_offices.any? %>
                <% current_offices.each do |oh| %>
                  <div class="text-xs"><%= oh.office.title %></div>
                <% end %>
                <% if person.current_offices.count > 2 %>
                  <div class="text-xs text-gray-400">+<%= person.current_offices.count - 2 %> more</div>
                <% end %>
              <% else %>
                <span class="text-gray-400">—</span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <% accounts = person.social_media_accounts %>
              <% if accounts.any? %>
                <div class="flex flex-wrap gap-1">
                  <% status_counts = accounts.group_by(&:research_status).transform_values(&:count) %>
                  <% if status_counts['verified'].to_i > 0 %>
                    <span class="px-2 py-0.5 text-xs bg-green-100 text-green-800 rounded"><%= status_counts['verified'] %> ✓</span>
                  <% end %>
                  <% if status_counts['entered'].to_i > 0 %>
                    <span class="px-2 py-0.5 text-xs bg-yellow-100 text-yellow-800 rounded"><%= status_counts['entered'] %> pending</span>
                  <% end %>
                  <% if status_counts['revised'].to_i > 0 %>
                    <span class="px-2 py-0.5 text-xs bg-blue-100 text-blue-800 rounded"><%= status_counts['revised'] %> revised</span>
                  <% end %>
                  <% if status_counts['not_started'].to_i > 0 %>
                    <span class="px-2 py-0.5 text-xs bg-gray-100 text-gray-600 rounded"><%= status_counts['not_started'] %> empty</span>
                  <% end %>
                </div>
              <% else %>
                <span class="text-sm text-gray-400">No accounts</span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <% active_assignment = person.assignments.active.first %>
              <% if active_assignment %>
                <div class="text-xs">
                  <div class="font-medium text-green-600"><%= active_assignment.user.name || active_assignment.user.email %></div>
                  <div class="text-gray-500"><%= active_assignment.task_type.humanize %></div>
                </div>
              <% else %>
                <span class="text-gray-400 text-sm">Unassigned</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to "View", admin_person_path(person), class: "text-blue-600 hover:text-blue-800 mr-2 text-sm" %>
              <%= link_to "Edit", edit_admin_person_path(person), class: "text-gray-600 hover:text-gray-800 text-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4 flex justify-between items-center">
    <div class="text-sm text-gray-600">
      Showing <%= @people.count %> of <%= @people.total_count %> people
    </div>
    <%= paginate @people %>
  </div>
</div>
