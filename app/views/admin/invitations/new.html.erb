<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "â† Back to Users", admin_users_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-100">
      <h1 class="text-2xl font-bold text-gray-900">Invite Users</h1>
      <p class="mt-1 text-sm text-gray-500">Send invitation emails to one or more people to join CandiData.</p>
    </div>

    <%= form_tag admin_invitations_path, method: :post, class: "p-6 space-y-6" do %>
      <div>
        <label for="role" class="block text-sm font-medium text-gray-700">Role</label>
        <select name="role" id="role" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
          <option value="researcher" selected>Researcher</option>
          <option value="admin">Admin</option>
        </select>
        <p class="mt-1 text-xs text-gray-500">All invited users will be assigned this role.</p>
      </div>

      <div>
        <label for="emails" class="block text-sm font-medium text-gray-700">Email Addresses</label>
        <textarea name="emails" id="emails" rows="6"
                  class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono"
                  placeholder="Enter email addresses, one per line or separated by commas&#10;&#10;e.g.&#10;researcher1@example.com&#10;researcher2@example.com, researcher3@example.com"><%= params[:emails] %></textarea>
        <p class="mt-1 text-xs text-gray-500">Enter one or more email addresses separated by commas, semicolons, or new lines.</p>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
          <svg class="h-5 w-5 text-blue-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
          </svg>
          <div class="ml-3">
            <p class="text-sm text-blue-700">
              Each person will receive a branded invitation email with a link to set up their account. They can join by creating a password or signing in with Google.
            </p>
          </div>
        </div>
      </div>

      <div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
        <%= link_to "Cancel", admin_users_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
        <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer">
          <svg class="inline w-4 h-4 mr-1 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
          Send Invitations
        </button>
      </div>
    <% end %>
  </div>
</div>
