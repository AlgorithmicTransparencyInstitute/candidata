<div class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Researcher Dashboard</h1>

  <!-- Stats Overview -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-blue-600"><%= @stats[:pending_research] %></div>
      <div class="text-sm text-gray-600">Pending Collection</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-yellow-600"><%= @stats[:in_progress_research] %></div>
      <div class="text-sm text-gray-600">In Progress</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-purple-600"><%= @stats[:pending_verification] %></div>
      <div class="text-sm text-gray-600">Pending Validation</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-orange-600"><%= @stats[:in_progress_verification] %></div>
      <div class="text-sm text-gray-600">Verifying</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-green-600"><%= @stats[:completed_total] %></div>
      <div class="text-sm text-gray-600">Completed</div>
    </div>
  </div>

  <div class="grid md:grid-cols-2 gap-8">
    <!-- Data Collection Assignments -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Data Collection</h2>
        <p class="text-sm text-gray-600">Find social media accounts for these candidates</p>
      </div>
      <div class="divide-y divide-gray-200">
        <% if @research_assignments.any? %>
          <% @research_assignments.each do |assignment| %>
            <div class="px-6 py-4 hover:bg-gray-50">
              <div class="flex justify-between items-center">
                <div>
                  <div class="font-medium text-gray-900"><%= assignment.person.full_name %></div>
                  <div class="text-sm text-gray-600">
                    <%= assignment.person.social_media_accounts.campaign.needs_research.count %> accounts to research
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <span class="px-2 py-1 text-xs rounded-full <%= assignment.pending? ? 'bg-blue-100 text-blue-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= assignment.status.humanize %>
                  </span>
                  <%= link_to "Work", researcher_assignment_path(assignment), class: "px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-8 text-center text-gray-500">
            No data collection assignments pending.
          </div>
        <% end %>
      </div>
    </div>

    <!-- Data Validation Assignments -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Data Validation</h2>
        <p class="text-sm text-gray-600">Verify accounts entered by other researchers</p>
      </div>
      <div class="divide-y divide-gray-200">
        <% if @verification_assignments.any? %>
          <% @verification_assignments.each do |assignment| %>
            <div class="px-6 py-4 hover:bg-gray-50">
              <div class="flex justify-between items-center">
                <div>
                  <div class="font-medium text-gray-900"><%= assignment.person.full_name %></div>
                  <div class="text-sm text-gray-600">
                    <%= assignment.person.social_media_accounts.campaign.needs_verification.count %> accounts to verify
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <span class="px-2 py-1 text-xs rounded-full <%= assignment.pending? ? 'bg-purple-100 text-purple-800' : 'bg-orange-100 text-orange-800' %>">
                    <%= assignment.status.humanize %>
                  </span>
                  <%= link_to "Verify", verification_assignment_path(assignment), class: "px-3 py-1 bg-purple-600 text-white text-sm rounded hover:bg-purple-700" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-8 text-center text-gray-500">
            No data validation assignments pending.
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Completed -->
  <% if @completed_assignments.any? %>
    <div class="mt-8 bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Recently Completed</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @completed_assignments.each do |assignment| %>
          <div class="px-6 py-3 flex justify-between items-center text-sm">
            <span class="text-gray-900"><%= assignment.person.full_name %></span>
            <span class="text-gray-500"><%= assignment.task_type.humanize %> - <%= time_ago_in_words(assignment.completed_at) %> ago</span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
