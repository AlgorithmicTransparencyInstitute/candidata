<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "‚Üê Back to Assignments", researcher_assignments_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <!-- Person Header -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-5">
      <div class="flex items-start justify-between">
        <div class="flex items-start gap-4">
          <% if @person.photo_url.present? %>
            <img src="<%= @person.photo_url %>" alt="<%= @person.full_name %>" class="w-20 h-20 rounded-lg object-cover">
          <% else %>
            <div class="w-20 h-20 rounded-lg bg-gray-200 flex items-center justify-center">
              <span class="text-gray-500 font-medium text-2xl"><%= @person.first_name.first %><%= @person.last_name.first %></span>
            </div>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= @person.full_name %></h1>
            <div class="mt-1 flex flex-wrap gap-x-3 gap-y-1 text-sm text-gray-600">
              <% if @person.primary_party %>
                <span class="inline-flex items-center gap-1">
                  <span class="w-2 h-2 rounded-full bg-gray-400"></span>
                  <%= @person.primary_party.name %>
                </span>
              <% end %>
              <% if @person.state_of_residence.present? %>
                <span><%= @person.state_of_residence %></span>
              <% end %>
              <% if @person.gender.present? %>
                <span><%= @person.gender %></span>
              <% end %>
              <% if @person.birth_date.present? %>
                <span>Born <%= @person.birth_date.strftime('%b %d, %Y') %></span>
              <% end %>
            </div>
            <% if @person.website_campaign.present? || @person.website_official.present? %>
              <div class="mt-1.5 flex flex-wrap gap-3 text-sm">
                <% if @person.website_campaign.present? %>
                  <a href="<%= @person.website_campaign %>" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-800 flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                    Campaign Site
                  </a>
                <% end %>
                <% if @person.website_official.present? %>
                  <a href="<%= @person.website_official %>" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-800 flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                    Official Site
                  </a>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="flex items-center gap-2 shrink-0">
          <span class="px-3 py-1 text-sm rounded-full <%= @assignment.pending? ? 'bg-blue-100 text-blue-800' : @assignment.in_progress? ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
            <%= @assignment.status.humanize %>
          </span>
          <% if @assignment.pending? %>
            <%= button_to "Start Working", start_researcher_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm font-medium" %>
          <% elsif @assignment.in_progress? %>
            <%= button_to "Mark Complete", complete_researcher_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm font-medium", data: { confirm: "Are you sure all accounts have been researched?" } %>
          <% elsif @assignment.completed? %>
            <% if @assignment.has_validation_assignment? %>
              <span class="text-xs text-gray-400 italic">In validation ‚Äî cannot reopen</span>
            <% else %>
              <%= button_to "Reopen", reopen_researcher_assignment_path(@assignment), method: :patch, class: "px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 text-sm font-medium" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Current Offices / Candidacies + Party inline below header -->
      <%
        # Find most recent candidacy (prefer 2026 or later)
        recent_candidacy = @candidacies.first
      %>
      <% if @current_offices.any? || recent_candidacy || @person.parties.any? %>
        <div class="mt-4 pt-4 border-t border-gray-200 flex flex-wrap gap-x-6 gap-y-2 text-sm">
          <% @current_offices.each do |oh| %>
            <div class="flex items-center gap-1.5 text-gray-700">
              <svg class="w-4 h-4 text-gray-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
              <span class="font-medium">Current: <%= oh.office.title %></span>
              <span class="text-gray-400">¬∑</span>
              <span class="text-gray-500 capitalize"><%= oh.office.level %><%= oh.office.state.present? ? " ¬∑ #{oh.office.state}" : '' %></span>
            </div>
          <% end %>
          <% if recent_candidacy && @current_offices.empty? %>
            <div class="flex items-center gap-1.5 text-blue-700">
              <svg class="w-4 h-4 text-blue-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <span class="font-medium">Candidate: <%= recent_candidacy.contest.office&.title || 'Unknown Office' %></span>
              <% if recent_candidacy.contest.office&.seat %>
                <span class="text-gray-400">¬∑</span>
                <span class="text-blue-600">(<%= recent_candidacy.contest.office.seat %>)</span>
              <% end %>
              <% if recent_candidacy.contest.ballot %>
                <span class="text-gray-400">¬∑</span>
                <span class="text-blue-600"><%= recent_candidacy.contest.ballot.year %> <%= recent_candidacy.contest.ballot.election_type&.titleize %></span>
              <% end %>
            </div>
          <% end %>
          <% if @person.parties.count > 1 %>
            <% @person.person_parties.includes(:party).where(is_primary: false).each do |pp| %>
              <div class="flex items-center gap-1.5 text-gray-500">
                <span class="w-2 h-2 rounded-full bg-gray-300"></span>
                <span><%= pp.party.name %></span>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Full-width work area -->

  <!-- Verification Help Box (only for data_validation assignments) -->
  <% if @assignment.task_type == 'data_validation' %>
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg shadow-sm mb-6">
      <div class="px-6 py-4">
        <div class="flex items-start gap-3">
          <div class="flex-shrink-0 mt-0.5">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">How to Verify Social Media Accounts</h3>

            <div class="space-y-4">
              <div>
                <h4 class="text-sm font-semibold text-gray-900 mb-2">‚úì Verification Checklist:</h4>
                <ul class="space-y-1.5 text-sm text-gray-700">
                  <li class="flex items-start gap-2">
                    <span class="text-blue-600 font-bold mt-0.5">1.</span>
                    <span><strong>Open the account link</strong> - Click the URL to view the actual account</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-blue-600 font-bold mt-0.5">2.</span>
                    <span><strong>Confirm identity</strong> - Verify it's the correct person (check name, photo, bio)</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-blue-600 font-bold mt-0.5">3.</span>
                    <span><strong>Check account type</strong> - Is it <%= @person.social_media_accounts.first&.channel_type || 'campaign' %>? (Campaign vs. Official accounts serve different purposes)</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-blue-600 font-bold mt-0.5">4.</span>
                    <span><strong>Verify URL format</strong> - Ensure URL is clean (no tracking parameters after ? or &)</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-blue-600 font-bold mt-0.5">5.</span>
                    <span><strong>Cross-check</strong> - Use Google search "[Name] [Platform]" to confirm</span>
                  </li>
                </ul>
              </div>

              <div class="grid md:grid-cols-2 gap-4 text-sm">
                <div class="bg-white rounded-lg p-3 border border-blue-100">
                  <h5 class="font-semibold text-gray-900 mb-2">‚úì If Account is Correct:</h5>
                  <p class="text-gray-700">Click <span class="px-2 py-0.5 bg-green-100 text-green-700 rounded text-xs font-medium">Verify</span> button</p>
                </div>
                <div class="bg-white rounded-lg p-3 border border-blue-100">
                  <h5 class="font-semibold text-gray-900 mb-2">‚úèÔ∏è If Account Needs Editing:</h5>
                  <p class="text-gray-700">Click <span class="text-blue-600 font-medium">Edit</span>, fix the URL/handle, then verify</p>
                </div>
              </div>

              <div class="bg-amber-50 border border-amber-200 rounded-lg p-3">
                <div class="flex gap-2">
                  <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                  </svg>
                  <div class="text-sm text-amber-900">
                    <strong>Campaign vs. Official:</strong>
                    <span class="text-amber-800">Campaign accounts are for election runs (e.g., "@SmithForSenate"). Official accounts are for current officeholders (e.g., "@SenSmith"). Make sure you're verifying the correct type for this assignment.</span>
                  </div>
                </div>
              </div>

              <div class="flex items-center justify-end gap-3 pt-2">
                <a href="<%= researcher_guide_path %>#verification-methods" target="_blank" class="text-sm text-blue-600 hover:text-blue-800 font-medium flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  Read Full Verification Guide
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Campaign Accounts -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Campaign Accounts</h2>
      <p class="text-sm text-gray-500">Enter the URL or handle for each platform, then check "Verified" after confirming on Google/platform</p>
    </div>
    <div class="divide-y divide-gray-200">
      <% @accounts.each do |account| %>
        <div class="px-5 py-3" id="account-<%= account.id %>">

          <% if account.research_status == 'not_started' && @assignment.in_progress? %>
            <!-- Not started: icon + name + fields + save + not found all on one line -->
            <div class="flex items-center gap-2">
              <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                <%= platform_icon(account.platform, size: 16) %>
              </div>
              <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
              <%= form_with url: mark_entered_researcher_account_path(account), method: :patch, class: "flex items-center gap-2 flex-1 min-w-0" do %>
                <input type="url" name="url" placeholder="https://..." class="flex-1 min-w-0 px-2.5 py-1 text-sm border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                <input type="text" name="handle" placeholder="@handle" class="w-28 px-2.5 py-1 text-sm border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                <button type="submit" class="px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 shrink-0">Save</button>
              <% end %>
              <%= button_to "Not Found", mark_not_found_researcher_account_path(account), method: :patch, class: "px-3 py-1 bg-gray-200 text-gray-600 text-sm rounded-md hover:bg-gray-300 shrink-0", data: { confirm: "Are you sure this account doesn't exist on #{account.platform}?" } %>
              <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
              </button>
            </div>

          <% elsif account.research_status == 'entered' && @assignment.in_progress? %>
            <!-- Entered: icon + name + data display on one line, click to edit -->
            <div class="flex items-center gap-2 group" id="display-<%= account.id %>">
              <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                <%= platform_icon(account.platform, size: 16) %>
              </div>
              <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
              <div class="flex-1 text-sm min-w-0 truncate">
                <% if account.url.present? %>
                  <a href="<%= account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= account.url %></a>
                <% end %>
                <% if account.handle.present? %>
                  <span class="text-gray-600"><%= account.url.present? ? ' ¬∑ ' : '' %>@<%= account.handle %></span>
                <% end %>
              </div>
              <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-700 shrink-0">Entered</span>
              <%= button_to toggle_researcher_verified_researcher_account_path(account), method: :patch, class: "inline-flex items-center gap-1 shrink-0", title: "Verified on Google/platform" do %>
                <span class="w-4 h-4 rounded border flex items-center justify-center text-xs
                  <%= account.researcher_verified? ? 'bg-green-600 border-green-600 text-white' : 'border-gray-300 text-transparent hover:border-gray-400' %>">‚úì</span>
                <span class="text-xs <%= account.researcher_verified? ? 'text-green-700' : 'text-gray-400' %>">Verified</span>
              <% end %>
              <button type="button" onclick="toggleEdit(<%= account.id %>)" class="text-xs text-gray-400 hover:text-blue-600 opacity-0 group-hover:opacity-100 transition-opacity shrink-0">Edit</button>
              <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100 opacity-0 group-hover:opacity-100 transition-opacity" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
              </button>
            </div>
            <!-- Edit form (hidden by default) -->
            <div class="hidden mt-2" id="edit-<%= account.id %>">
              <div class="flex items-center gap-2 ml-9">
                <%= form_with url: mark_entered_researcher_account_path(account), method: :patch, class: "flex items-center gap-2 flex-1 min-w-0" do %>
                  <input type="url" name="url" value="<%= account.url %>" placeholder="https://..." class="flex-1 min-w-0 px-2.5 py-1 text-sm border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                  <input type="text" name="handle" value="<%= account.handle %>" placeholder="@handle" class="w-28 px-2.5 py-1 text-sm border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                  <button type="submit" class="px-3 py-1 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 shrink-0">Save</button>
                <% end %>
                <button type="button" onclick="toggleEdit(<%= account.id %>)" class="px-3 py-1 text-gray-500 text-sm hover:bg-gray-100 rounded-md shrink-0">Cancel</button>
                <%= button_to "Reset", reset_status_researcher_account_path(account), method: :patch, class: "px-3 py-1 text-red-500 text-sm hover:bg-red-50 rounded-md shrink-0", data: { confirm: "Clear this entry and start over?" } %>
              </div>
            </div>

          <% elsif account.research_status == 'not_found' && @assignment.in_progress? %>
            <!-- Not found: icon + name + message + verified + undo on one line -->
            <div class="flex items-center gap-2">
              <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                <%= platform_icon(account.platform, size: 16) %>
              </div>
              <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
              <span class="text-sm text-gray-400 italic flex-1">Not found</span>
              <span class="px-2 py-0.5 text-xs rounded-full bg-gray-200 text-gray-500 shrink-0">Not Found</span>
              <%= button_to toggle_researcher_verified_researcher_account_path(account), method: :patch, class: "inline-flex items-center gap-1 shrink-0", title: "Verified on Google/platform" do %>
                <span class="w-4 h-4 rounded border flex items-center justify-center text-xs
                  <%= account.researcher_verified? ? 'bg-green-600 border-green-600 text-white' : 'border-gray-300 text-transparent hover:border-gray-400' %>">‚úì</span>
                <span class="text-xs <%= account.researcher_verified? ? 'text-green-700' : 'text-gray-400' %>">Verified</span>
              <% end %>
              <%= button_to "Undo", reset_status_researcher_account_path(account), method: :patch, class: "text-xs text-blue-600 hover:text-blue-800 shrink-0" %>
              <button type="button" onclick="openNotesModal(<%= account.id %>, '<%= j account.platform %>')" class="shrink-0 p-1 rounded hover:bg-gray-100" title="<%= account.research_notes.present? ? 'Edit notes' : 'Add notes' %>">
                <svg data-notes-icon class="w-4 h-4 <%= account.research_notes.present? ? 'text-blue-600' : 'text-gray-300 hover:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
              </button>
            </div>

          <% elsif account.research_status == 'entered' %>
            <!-- Entered, read-only -->
            <div class="flex items-center gap-2">
              <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                <%= platform_icon(account.platform, size: 16) %>
              </div>
              <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
              <div class="flex-1 text-sm min-w-0 truncate">
                <% if account.url.present? %>
                  <a href="<%= account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= account.url %></a>
                <% end %>
                <% if account.handle.present? %>
                  <span class="text-gray-600"><%= account.url.present? ? ' ¬∑ ' : '' %>@<%= account.handle %></span>
                <% end %>
              </div>
              <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-700 shrink-0">Entered</span>
              <% if account.researcher_verified? %>
                <span class="text-xs text-green-600">‚úì Verified</span>
              <% end %>
              <% if account.research_notes.present? %>
                <span class="text-xs text-gray-400 italic truncate max-w-[150px]" title="<%= account.research_notes %>">üìù <%= truncate(account.research_notes, length: 30) %></span>
              <% end %>
            </div>

          <% elsif account.research_status == 'not_found' %>
            <!-- Not found, read-only -->
            <div class="flex items-center gap-2">
              <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                <%= platform_icon(account.platform, size: 16) %>
              </div>
              <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
              <span class="text-sm text-gray-400 italic flex-1">Not found</span>
              <span class="px-2 py-0.5 text-xs rounded-full bg-gray-200 text-gray-500 shrink-0">Not Found</span>
              <% if account.researcher_verified? %>
                <span class="text-xs text-green-600">‚úì Verified</span>
              <% end %>
              <% if account.research_notes.present? %>
                <span class="text-xs text-gray-400 italic truncate max-w-[150px]" title="<%= account.research_notes %>">üìù <%= truncate(account.research_notes, length: 30) %></span>
              <% end %>
            </div>

          <% else %>
            <!-- Not started, assignment not in progress -->
            <div class="flex items-center gap-2">
              <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
                <%= platform_icon(account.platform, size: 16) %>
              </div>
              <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
              <span class="text-sm text-gray-400 flex-1">Start assignment to begin</span>
            </div>
          <% end %>

        </div>
      <% end %>
    </div>
  </div>

  <!-- Existing Official Accounts (read-only) -->
  <% if @official_accounts.any? %>
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Official Accounts</h2>
        <p class="text-sm text-gray-500">Existing office accounts (for reference)</p>
      </div>
      <div class="divide-y divide-gray-200">
        <% @official_accounts.each do |account| %>
          <div class="px-5 py-3 flex items-center gap-2">
            <div class="w-7 h-7 rounded-full bg-gray-100 flex items-center justify-center shrink-0">
              <%= platform_icon(account.platform, size: 16) %>
            </div>
            <div class="w-24 shrink-0 font-medium text-gray-900 text-sm"><%= account.platform %></div>
            <div class="flex-1 text-sm min-w-0 truncate">
              <% if account.url.present? %>
                <a href="<%= account.url %>" target="_blank" class="text-blue-600 hover:text-blue-800"><%= account.url %></a>
              <% elsif account.handle.present? %>
                <span class="text-gray-600">@<%= account.handle %></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Collapsible context: past offices + election history -->
  <% if @past_offices.any? || @candidacies.any? %>
    <details class="mb-6">
      <summary class="text-sm text-gray-500 cursor-pointer hover:text-gray-700 mb-3">Show past offices & election history</summary>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% if @past_offices.any? %>
          <div class="bg-white rounded-lg shadow">
            <div class="px-5 py-3 border-b border-gray-200">
              <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Past Offices</h3>
            </div>
            <div class="divide-y divide-gray-200">
              <% @past_offices.each do |oh| %>
                <div class="px-5 py-2.5">
                  <div class="font-medium text-gray-900 text-sm"><%= oh.office.title %></div>
                  <div class="text-xs text-gray-500"><%= oh.start_date.strftime('%b %Y') %> ‚Äì <%= oh.end_date&.strftime('%b %Y') || 'Present' %></div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if @candidacies.any? %>
          <div class="bg-white rounded-lg shadow">
            <div class="px-5 py-3 border-b border-gray-200">
              <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Election History</h3>
            </div>
            <div class="divide-y divide-gray-200">
              <% @candidacies.each do |candidate| %>
                <div class="px-5 py-2.5 flex justify-between items-center">
                  <div>
                    <div class="font-medium text-gray-900 text-sm"><%= candidate.contest.office&.title || 'Unknown' %></div>
                    <div class="text-xs text-gray-500"><%= candidate.contest.date&.strftime('%b %Y') %></div>
                  </div>
                  <% case candidate.outcome %>
                  <% when 'won' %>
                    <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-700">Won</span>
                  <% when 'lost' %>
                    <span class="px-2 py-0.5 text-xs rounded-full bg-red-100 text-red-700">Lost</span>
                  <% else %>
                    <span class="px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-600"><%= candidate.outcome&.titleize || 'Pending' %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </details>
  <% end %>
</div>

<!-- Notes Modal -->
<div id="notesModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h3 class="text-lg font-semibold text-gray-900" id="notesModalTitle">Notes</h3>
      <button type="button" onclick="closeNotesModal()" class="text-gray-400 hover:text-gray-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    <div class="px-6 py-4">
      <textarea id="notesTextarea" rows="4" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Add any notes about this account..."></textarea>
    </div>
    <div class="px-6 py-3 bg-gray-50 rounded-b-lg flex justify-end gap-3">
      <span id="notesSaveStatus" class="text-xs text-gray-400 mr-auto self-center"></span>
      <button type="button" onclick="cancelNotesModal()" class="px-4 py-2 text-sm text-gray-700 hover:text-gray-900">Cancel</button>
      <button type="button" onclick="saveAndCloseNotesModal()" class="px-4 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700">Save Notes</button>
    </div>
  </div>
</div>

<script>
  function toggleEdit(accountId) {
    const display = document.getElementById('display-' + accountId);
    const edit = document.getElementById('edit-' + accountId);
    display.classList.toggle('hidden');
    edit.classList.toggle('hidden');
  }

  // Notes data for each account
  const accountNotes = {
    <% @accounts.each do |account| %>
      <%= account.id %>: <%= account.research_notes.to_s.to_json.html_safe %>,
    <% end %>
  };

  let currentNotesAccountId = null;
  const csrfToken = '<%= form_authenticity_token %>';

  function openNotesModal(accountId, platform) {
    currentNotesAccountId = accountId;
    document.getElementById('notesModalTitle').textContent = platform + ' Notes';
    document.getElementById('notesTextarea').value = accountNotes[accountId] || '';
    document.getElementById('notesSaveStatus').textContent = '';
    document.getElementById('notesModal').classList.remove('hidden');
    document.getElementById('notesTextarea').focus();
  }

  function saveAndCloseNotesModal() {
    if (currentNotesAccountId === null) return;
    const textarea = document.getElementById('notesTextarea');
    const newNotes = textarea.value;

    // Update local cache
    accountNotes[currentNotesAccountId] = newNotes;

    // Save via fetch
    const formData = new FormData();
    formData.append('research_notes', newNotes);
    formData.append('_method', 'patch');
    formData.append('authenticity_token', csrfToken);

    const savingAccountId = currentNotesAccountId;
    currentNotesAccountId = null;
    document.getElementById('notesModal').classList.add('hidden');

    fetch('/researcher/accounts/' + savingAccountId + '/update_notes', {
      method: 'POST',
      body: formData,
      headers: { 'Accept': 'application/json' }
    }).then(function() {
      // Update the notes icon color on the row without a full reload
      const row = document.getElementById('account-' + savingAccountId);
      if (row) {
        row.querySelectorAll('[data-notes-icon]').forEach(function(icon) {
          if (newNotes.trim()) {
            icon.classList.remove('text-gray-300', 'hover:text-gray-500');
            icon.classList.add('text-blue-600');
          } else {
            icon.classList.remove('text-blue-600');
            icon.classList.add('text-gray-300', 'hover:text-gray-500');
          }
        });
      }
    });
  }

  function cancelNotesModal() {
    currentNotesAccountId = null;
    document.getElementById('notesModal').classList.add('hidden');
  }

  function closeNotesModal() {
    saveAndCloseNotesModal();
  }

  document.getElementById('notesModal').addEventListener('click', function(e) {
    if (e.target === this) saveAndCloseNotesModal();
  });
</script>
