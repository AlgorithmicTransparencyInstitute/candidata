<div class="min-h-screen bg-gray-50">
  <%= render "shared/public_navbar" %>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Back link -->
    <div class="mb-4">
      <%= link_to "← Back to Politicians", people_path(request.query_parameters.except(:id)), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
    </div>

    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-start gap-6">
        <% if @person.photo_url.present? %>
          <img src="<%= @person.photo_url %>" alt="<%= @person.full_name %>" class="w-32 h-32 rounded-lg object-cover">
        <% else %>
          <div class="w-32 h-32 rounded-lg bg-gray-200 flex items-center justify-center">
            <span class="text-gray-500 font-medium text-3xl"><%= @person.first_name.first %><%= @person.last_name.first %></span>
          </div>
        <% end %>
        
        <div class="flex-1">
          <div class="flex items-center gap-3">
            <h1 class="text-3xl font-bold text-gray-900"><%= @person.full_name %></h1>
            <% if @person.current_officeholder? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                Current Officeholder
              </span>
            <% end %>
          </div>
          
          <div class="mt-3 flex flex-wrap gap-4 text-sm text-gray-600">
            <% if @person.primary_party %>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <%= link_to @person.primary_party.name, party_path(@person.primary_party), class: "text-indigo-600 hover:text-indigo-900" %>
              </div>
            <% end %>
            
            <% if @person.state_of_residence.present? %>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= link_to @person.state_of_residence, state_path(@person.state_of_residence), class: "text-indigo-600 hover:text-indigo-900" %>
              </div>
            <% end %>
            
            <% if @person.gender.present? %>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <span><%= @person.gender %></span>
              </div>
            <% end %>
            
            <% if @person.birth_date.present? %>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>Born <%= @person.birth_date.strftime('%B %d, %Y') %></span>
              </div>
            <% end %>
          </div>

          <!-- Social Media -->
          <% if @person.social_media_accounts.any? %>
            <div class="mt-4 flex flex-wrap gap-2">
              <% @person.social_media_accounts.each do |account| %>
                <% if account.url.present? || account.handle.present? %>
                  <a href="<%= account.url || '#' %>" target="_blank" rel="noopener" 
                     class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700 hover:bg-gray-200">
                    <%= account.platform %>
                    <% if account.handle.present? && !account.handle.start_with?('http') %>
                      : @<%= account.handle.gsub('@', '') %>
                    <% end %>
                  </a>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Current Offices -->
      <div class="lg:col-span-2 space-y-6">
        <% if @current_offices.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">Current Offices</h2>
            </div>
            <div class="divide-y divide-gray-200">
              <% @current_offices.each do |officeholder| %>
                <div class="px-6 py-4">
                  <div class="flex justify-between items-start">
                    <div>
                      <%= link_to office_path(officeholder.office), class: "text-base font-medium text-indigo-600 hover:text-indigo-900" do %>
                        <%= officeholder.office.title %>
                        <% if officeholder.office.seat.present? %>
                          <span class="text-gray-500 font-normal">(<%= officeholder.office.seat %>)</span>
                        <% end %>
                      <% end %>
                      <div class="mt-1 text-sm text-gray-500">
                        <span class="capitalize"><%= officeholder.office.level %></span> · 
                        <span class="capitalize"><%= officeholder.office.branch %></span>
                        <% if officeholder.office.state.present? %>
                          · <%= officeholder.office.state %>
                        <% end %>
                      </div>
                    </div>
                    <div class="text-right text-sm text-gray-500">
                      <div>Since <%= officeholder.start_date.strftime('%b %Y') %></div>
                      <% if officeholder.term_end_date.present? %>
                        <div class="text-xs">Term ends <%= officeholder.term_end_date.strftime('%b %Y') %></div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Past Offices -->
        <% if @past_offices.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">Past Offices</h2>
            </div>
            <div class="divide-y divide-gray-200">
              <% @past_offices.each do |officeholder| %>
                <div class="px-6 py-4">
                  <div class="flex justify-between items-start">
                    <div>
                      <%= link_to office_path(officeholder.office), class: "text-base font-medium text-gray-700 hover:text-indigo-600" do %>
                        <%= officeholder.office.title %>
                        <% if officeholder.office.seat.present? %>
                          <span class="text-gray-500 font-normal">(<%= officeholder.office.seat %>)</span>
                        <% end %>
                      <% end %>
                      <div class="mt-1 text-sm text-gray-500">
                        <span class="capitalize"><%= officeholder.office.level %></span> · 
                        <span class="capitalize"><%= officeholder.office.branch %></span>
                      </div>
                    </div>
                    <div class="text-right text-sm text-gray-500">
                      <%= officeholder.start_date.strftime('%b %Y') %> – <%= officeholder.end_date&.strftime('%b %Y') || 'Present' %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Candidacies -->
        <% if @candidacies.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">Election History</h2>
            </div>
            <div class="divide-y divide-gray-200">
              <% @candidacies.each do |candidate| %>
                <div class="px-6 py-4">
                  <div class="flex justify-between items-start">
                    <div>
                      <div class="text-base font-medium text-gray-900">
                        <%= candidate.contest.office&.title || 'Unknown Office' %>
                      </div>
                      <div class="mt-1 text-sm text-gray-500">
                        <%= candidate.contest.ballot&.election_type&.titleize %> · 
                        <%= candidate.contest.date&.strftime('%B %Y') %>
                      </div>
                    </div>
                    <div>
                      <% case candidate.outcome %>
                      <% when 'won' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Won</span>
                      <% when 'lost' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Lost</span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"><%= candidate.outcome&.titleize || 'Pending' %></span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Stats -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Stats</h3>
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Total Offices Held</dt>
              <dd class="text-sm font-medium text-gray-900"><%= @person.officeholders.count %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Current Offices</dt>
              <dd class="text-sm font-medium text-gray-900"><%= @current_offices.count %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Elections Run</dt>
              <dd class="text-sm font-medium text-gray-900"><%= @candidacies.count %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Social Accounts</dt>
              <dd class="text-sm font-medium text-gray-900"><%= @person.social_media_accounts.count %></dd>
            </div>
          </dl>
        </div>

        <!-- Party Affiliations -->
        <% if @person.parties.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Party Affiliations</h3>
            <ul class="space-y-2">
              <% @person.person_parties.includes(:party).each do |pp| %>
                <li class="flex items-center justify-between">
                  <%= link_to pp.party.name, party_path(pp.party), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
                  <% if pp.is_primary %>
                    <span class="text-xs text-gray-500">Primary</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Contact -->
        <% if @person.website_official.present? || @person.website_campaign.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Links</h3>
            <ul class="space-y-2">
              <% if @person.website_official.present? %>
                <li>
                  <a href="<%= @person.website_official %>" target="_blank" rel="noopener" class="text-sm text-indigo-600 hover:text-indigo-900 flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    Official Website
                  </a>
                </li>
              <% end %>
              <% if @person.website_campaign.present? %>
                <li>
                  <a href="<%= @person.website_campaign %>" target="_blank" rel="noopener" class="text-sm text-indigo-600 hover:text-indigo-900 flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    Campaign Website
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
